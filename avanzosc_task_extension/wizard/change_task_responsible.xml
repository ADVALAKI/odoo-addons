<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data>
		
		 <record id="view_task_responsible_change" model="ir.ui.view">
            <field name="name">view.task.responsible.change</field>
            <field name="model">task.responsible.change</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
               <form string="Change meeting responsible">
                    <field name="responsible" colspan="4"/>     
                    <field name="limit_date" colspan="4"/>             
                    <separator string="" colspan="4" />
                    <button special="cancel" string="Cancel" icon="gtk-cancel"/>
                    <button name="change_responsible" string="Change" type="object" icon="gtk-convert"/>
                </form>
            </field>
        </record>
   
         <act_window name="Change task responsible"            
            res_model="task.responsible.change"
            src_model="project.task"
            view_mode="form"
            target="new"
            multi="True"        
            key2="client_action_multi"    
            groups="base.group_extended"
            id="action_task_responsible_change"/>    
                        
         
    </data>
</openerp>
