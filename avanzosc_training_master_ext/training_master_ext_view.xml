		<!-- ================== FORM ====================== -->
		<record model="ir.ui.view" id="training_titles_form_view">
			<field name="name">training.titles.form.view</field>
			<field name="model">training.titles</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Title Form">
				<separator string="Titulos"/>
				<group colspan="4">
					<field name="title_id" />
					<field name="name" />
				</group>
				<separator colspan ="4"/>
				<group colspan="4">
					<field name="price_list" nolabel='1' height="250"/>
				</group>
				</form>
			</field>
		</record>
		
