			<field name="arch" type="xml">
				<search string="Titles">
					<field name="title_id" />
					<field name="name" />
				</search>
			</field>
		</record>
		
		<!-- ================== TREE ====================== -->
		<record model="ir.ui.view" id="training_titles_tree_view">
			<field name="name">training.titles.tree.view</field>
			<field name="model">training.titles</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
