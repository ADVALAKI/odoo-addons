	 								TRAINING.GROUP.PROCEEDINGS
	===========================================================================================
	-->
	<!-- TREE -->
	<record model="ir.ui.view" id="training_group_proceedings_tree_view">
		<field name="name">training.group.proceedings.tree.view</field>
		<field name="model">training.group.proceedings</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree string="Group List">
				<field name="code" />
				<field name="name" />
			</tree>
		</field>
	</record>
	
	<!-- SEARCH -->
	<record model="ir.ui.view" id="training_group_proceedings_search_view">
		<field name="name">training.group.proceedings.search.view</field>
		<field name="model">training.group.proceedings</field>
		<field name="type">search</field>
		<field name="arch" type="xml">
			<search string="Training Group List">
				<field name="code" />
				<field name="name" />
			</search>
		</field>
	</record>
	
	<!-- FORM -->
	<record model="ir.ui.view" id="training_group_proceedings_form_view">
		<field name="name">training.group.proceedings.form.view</field>
