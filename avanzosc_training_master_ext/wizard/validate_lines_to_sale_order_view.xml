<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

		<record model="ir.ui.view" id="wiz_validate_lines_to_sale_order_form_view">
			<field name="name">wiz.validate.lines.to.sale.order.form.view</field>
			<field name="model">wiz.validate.lines.to.sale.order</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Validate Lines To Sale Order">
					<field name="validate_line_list" nolabel="1" colspan="4" height="200" width="400" attrs="{'invisible': [('state','!=','first')]}"/>
					<field name="note" nolabel="1" colspan="4" height="200" attrs="{'invisible': [('state','=','first')]}"/>
					<field name="state" invisible="1"/>
					<button type="object" special="cancel" string="Cancel" icon="gtk-cancel" colspan="2"/>
					<group colspan="2" col="4">
						<button name="next_step" type="object" string="Next" icon="terp-gtk-go-back-rtl" colspan="2" attrs="{'invisible': [('state','=','second')]}"/>
						<button name="create_sale_order" icon='gtk-ok' type="object" string="Continuar" colspan="2" attrs="{'invisible': [('state','=','first')]}"/>
					</group>
				</form>
			</field>
		</record>
		
		<record model="ir.ui.view" id="wiz_validate_line_tree_view">
			<field name="name">wiz.validate.line.tree.view</field>
			<field name="model">wiz.validate.line</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Validate Lines" editable="bottom">
	            	<!-- <field name="product_id"/> -->
	            	<field name="name"/>
	            	<field name="discount_type"/>
	                <field name="check"/>
				</tree>
			</field>
		</record>
		
		<record model="ir.ui.view" id="wiz_validate_line_form_view">
			<field name="name">wiz.validate.line.form.view</field>
			<field name="model">wiz.validate.line</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Validate Line">
	            	<!-- <field name="product_id"/> -->
	            	<field name="name" readonly="1"/>
	            	<field name="discount_type"/>
	                <field name="check"/>
				</form>
			</field>
		</record>

		<record id="act_create_sale_order" model="ir.actions.act_window">
			<field name="name">action.create.sale.order.wizard</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">wiz.validate.lines.to.sale.order</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

		<act_window name="Ampliación de Matrícula" res_model="wiz.validate.lines.to.sale.order"
			src_model="training.record" view_mode="form" target="new" key2="client_action_multi"
			id="wiz_create_sale_order" />
			
		<record model="ir.ui.view" id="training_record_form_inherit">
			<field name="name">training.record.form.inherit</field>
			<field name="model">training.record</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="avanzosc_training_master_ext.training_record_form_view" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='record_validate_line_ids']" position="after">
					<group colspan="2" col="4">
						<button name ="%(act_create_sale_order)d" type="action" string="Ampliación de Matrícula" icon="gtk-convert" colspan="2"/>
					</group>
				</xpath>
			</field>
		</record>

	</data>
</openerp>