<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
	<!-- 
	==============================================================================================
	WIZ.FIND.STUDENT
	==============================================================================================
	 -->
	
		<record model="ir.ui.view" id="wiz_find_student_form_view">
			<field name="name">wiz_find.student.form.view</field>
			<field name="model">wiz.find.student</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Student">
					<group colspan="4">
						<field name="wiz_line" nolabel="1" colspan="4" height="500" width="600"/>
					</group>
					<group colspan="2" col="5">
						<button name="insert_charge" icon='gtk-ok' type="object"
							string="Ok"/>
					</group>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="wiz_find_student_tree_view">
			<field name="name">wiz.find.student.tree.view</field>
			<field name="model">wiz.find.student</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Student List">
					<field name="wiz_line" nolabel="1" />
				</tree>
			</field>
		</record>
		
	<!-- ACCION -->	
		<record id="act_wiz_find_student" model="ir.actions.act_window">
			<field name="name">action.wizard.find.student</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">wiz.find.student</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>
	
	<!-- 
	==============================================================================================
	WIZ.LINE.SELECTED
	==============================================================================================
	 -->
	 
	 <record model="ir.ui.view" id="wiz_line_selected_form_view">
			<field name="name">wiz.line.selected.form.view</field>
			<field name="model">wiz.line.selected</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Student">
					<field name="name"/>
					<!-- <field name="id_line"/> -->
					<field name="chk"/>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="wiz_line_selected_tree_view">
			<field name="name">wiz.line.selected.tree.view</field>
			<field name="model">wiz.line.selected</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Student List" editable="bottom">
					<field name="name"/>
					<!-- <field name="id_line"/> -->
					<field name="chk"/>
				</tree>
			</field>
		</record>
	</data>
</openerp>