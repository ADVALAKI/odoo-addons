<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

	<!--
	=========================================================== 
		RECORD LINE
	===========================================================
	-->
	<!-- TREE -->
	<record model="ir.ui.view" id="training_record_line_tree_view">
		<field name="name">training.record.line.tree</field>
		<field name="model">training.record.line</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree string="Record Lines">
				<field name="course_code"/>
				<field name="name" />
				<field name="student_id" />
				<field name="student_doc" />
				<!-- <field name="date" /> -->
				<!-- <field name="year" /> -->
				<field name="offer_id"/>
				<field name="coursenum_id"/>
				<field name="credits" />
				<field name="tipology" />
				<field name="call" />
				<field name="type" />
				<field name="mark" on_change="onchange_mark(mark)" />
				<field name="state"/>
				<field name="session"/>
				<field name="university"/>
				<!-- <field name="clear" /> -->
			</tree>
		</field>
	</record>
	
	<!-- SEARCH -->
	<record model="ir.ui.view" id="training_record_line_search_view">
		<field name="name">training.record.line.tree</field>
		<field name="model">training.record.line</field>
		<field name="type">search</field>
		<field name="arch" type="xml">
			<search string="Search Record Lines">
				<field name="student_id" />
				<field name="name" />
				<field name="offer_id"/>
				<field name="year" />
				<newline/>
				<group expand="0" string="Filter By..." colspan="11" col="11" groups="base.group_extended">
					<filter string="Students without acts" domain="[('proceeding_ids', '=','')]"/>
				</group>
				<newline/>
				<group expand="0" string="Group By..." colspan="11" col="11" groups="base.group_extended">
					<filter string="Student" domain="[]" context="{'group_by':'student_id'}" />
					<filter string="Seance Name" domain="[]" context="{'group_by':'name'}" />
				</group>
			</search>
		</field>
	</record>

	<!-- FORM -->
	<record model="ir.ui.view" id="training_record_line_form_view">
		<field name="name">training.record.line.form</field>
		<field name="model">training.record.line</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
			<form string="Record Line">
				<group colspan="4" attrs="{'invisible':[('type','not in',['validated','recognized','adapted'])]}" col="4">
					<separator string="Validation" colspan="4" />
					<group colspan="4" col="16">
						<field name="validation_type"/>
						<field name="validate_date_line_id" colspan="4" on_change="onchange_validate_date(validate_date_line_id)"/>
						<field name="pass_date" colspan="4"/>
					</group>
					<group colspan="2" col="2" attrs="{'invisible':[('validation_type','=','external')]}">
						<field name="internal_course_id" on_change="onchange_internal_course(internal_course_id)" colspan="2"/>
					</group>
					<newline/>
					<group colspan="2" col="2" attrs="{'invisible':[('validation_type','=','internal')]}">
						<!-- <separator string="External data" colspan="4"/> -->
						<field name="external_course_id" on_change="onchange_external_course(external_course_id)" colspan="2"/>
					</group>
					<group colspan="4" attrs="{'invisible':[('validation_type','=','internal')]}"> 
						<separator string="Notes" colspan="4" />
						<field name="notes" nolabel="1" colspan="4"/>
					</group>
				</group>
					<!-- <field name="student_id" /> -->
					<separator string="Course Information" colspan="4" />
					<field name="date" attrs="{'invisible':[('type','in',['validated','recognized','adapted'])]}"/>
					<field name="name" invisible="1" />
					<field name="seance_id" attrs="{'invisible':[('type','in',['validated','recognized','adapted'])]}"/>
					<field name="course_code" attrs="{'readonly':[('type','not in',['validated','recognized','adapted'])]}"/>
					<!-- <field name="seance_id" on_change="onchange_session(seance_id)" /> -->
					<!-- <field name="session" attrs="{'invisible':[('type','in',['validated','recognized','adapted'])]}"/> -->
					<field name="university" attrs="{'readonly':[('type','not in',['validated','recognized','adapted'])]}"/>
					<field name="credits" />
					<field name="type" />
					<field name="tipology" />
					<!-- <field name="call" attrs="{'invisible':[('type','in',['validated','recognized','adapted'])]}"/> -->
					<field name="cycle" attrs="{'readonly':[('type','not in',['validated','recognized','adapted'])]}"/>
					<field name="session" attrs="{'readonly':[('type','not in',['validated','recognized','adapted'])]}"/>
				<group colspan="4">
					<separator string="Mark" colspan="4" col="4"/>
					<field name="mark" on_change="onchange_mark(mark,state)" />
					<field name="state" />
				</group>
			</form>
		</field>
	</record>
	
