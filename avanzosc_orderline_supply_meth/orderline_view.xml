<openerp>
	<data>
	
	<!-- Sale Order Line View Inh   -->
		<record id="view_orderline_supply_meth" model="ir.ui.view">
      <field name="name">view.orderline.supply.meth</field>
      <field name="model">sale.order.line</field>
      <field name="inherit_id" ref="sale.view_order_line_tree"/>
      <field name="arch" type="xml">
        <field name="product_id" position="after">
              <field name="supply_method" colspan="1"/>
        </field>
      </field>
    </record>
    
    	<!-- Sale Order View Inh   -->
		<record id="view_sale_order_supply_inh" model="ir.ui.view">
      <field name="name">view.sale.order.supply.inh</field>
      <field name="model">sale.order</field>
      <field name="priority" eval="35"/>
      <field name="inherit_id" ref="sale.view_order_form"/>
      <field name="arch" type="xml">
      	<data>
      	<xpath expr="//form/notebook/page[@string='Order Line']/field[@name='product_uom']" position="after">
      		<field name="supply_method" colspan="1"/>
       </xpath>
       <xpath expr="//tree[@string='Sales order lines']/field[@name='product_uom']" position="after">
      		<field name="supply_method" colspan="1"
      		context="partner_id=parent.partner_id,quantity=product_uom_qty,pricelist=parent.pricelist_id,shop=parent.shop_id,uom=product_uom"
            on_change="product_id_change(parent.pricelist_id,product_id,product_uom_qty,product_uom,product_uos_qty,product_uos,name,parent.partner_id, 'lang' in context and context['lang'], False, parent.date_order, product_packaging, parent.fiscal_position, False)"
      		/>
       </xpath>
       </data>
      </field>
    </record>
	
	</data>
</openerp>