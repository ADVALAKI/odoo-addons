<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<!--
		======================================================================== 
			RES.PARTNER.CONTACT
		======================================================================== 
		-->

		<!-- TREE -->

		<record model="ir.ui.view" id="view_partner_contact_tree_inh2">
			<field name="name">res.partner.contact.tree.inh2</field>
			<field name="model">res.partner.contact</field>
			<field name="type">tree</field>
			<field name="inherit_id"
				ref="training_multi_school.res_partner_contact_training_multi_school_tree_view_inherited" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='school_id']" position="replace">
				</xpath>
			</field>
		</record>

		<record model="ir.ui.view" id="view_partner_contact_tree_inh3">
			<field name="name">res.partner.contact.tree.inh3</field>
			<field name="model">res.partner.contact</field>
			<field name="type">tree</field>
			<field name="inherit_id"
				ref="training_group.res_partner_contact_tree_view_inherited" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='group_id']" position="replace">
				</xpath>
			</field>
		</record>

		<record model="ir.ui.view" id="view_partner_contact_tree_inh">
			<field name="name">res.partner.contact.tree.inh</field>
			<field name="model">res.partner.contact</field>
			<field name="type">tree</field>
			<field name="inherit_id" ref="base_contact.view_partner_contact_tree" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='first_name']" position="after">
					<field name="student_number" />
					<!-- <field name="type"/> -->
					<field name="student" />
					<field name="teacher" />
					<field name="other" />
				</xpath>
				<xpath expr="//field[@name='lang_id']" position="replace">
					<field name="birthdate" />
					<field name="tutor" />
				</xpath>
				<!-- <xpath expr="//field[@name='function']" position="replace"> </xpath> -->
			</field>
		</record>

		<!-- SEARCH -->

		<record model="ir.ui.view" id="view_partner_contact_search_inh">
			<field name="name">res.partner.contact.search.inh</field>
			<field name="model">res.partner.contact</field>
			<field name="type">search</field>
			<field name="inherit_id" ref="base_contact.view_partner_contact_search" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='partner_id']" position="after">
					<newline />
					<group expand="0" string="Extended Filters..." colspan="16">
						<filter string="telephone" icon="terp-gdu-smart-failing"
							domain="['|',('mobile','!=',False),('telephone','!=',False)]" />
						<filter string="student" icon="terp-gdu-smart-failing"
							domain="[('student','!=',False)]" />
						<filter string="teacher" icon="terp-gdu-smart-failing"
							domain="[('teacher','!=',False)]" />
						<filter string="other" icon="terp-gdu-smart-failing"
							domain="[('other','!=',False)]" />
						<filter string="tutor" icon="terp-gdu-smart-failing"
							domain="[('tutor','!=',False)]" />	
					</group>
					<newline />
					<group expand="0" string="Group By..." colspan="16">
						<filter string="Name" context="{'group_by':'name'}" />
						<!-- <filter string="Type" context="{'group_by':'type'}" /> -->
					</group>
				</xpath>
			</field>
		</record>

		<!-- FORM -->

		<record model="ir.ui.view" id="res_partner_contact_view_inh">
			<field name="name">res.partner.contact.view.inh</field>
			<field name="model">res.partner.contact</field>
			<field name="type">form</field>
			<field name="priority" eval="10"/>
			<field name="inherit_id" ref="avanzosc_cv_normalizado.cvn_form_view" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='first_name']" position="after">
					<group colspan="2" col="6">
						<field name="student" colspan="2" on_change="onchange_student(student)"/>
						<field name="teacher" colspan="2"/>
						<field name="other" colspan="2"/>
					</group>
					<group colspan="10" col="10" attrs="{'invisible':[('student','=',False)]}">
						<group colspan="6" col="8">
							<field name="student_number" colspan="4"/>
							<field name="face" colspan="2"/>
							<field name="online" colspan="2"/>				
						</group>
						<group colspan="4">
							<field name="face_code" attrs="{'invisible':[('face','=',False)]}"/>	
							<field name="online_code" attrs="{'invisible':[('online','=',False)]}"/>
						</group>
					</group>
				</xpath>
				<xpath expr="//field[@name='lang_id']" position="before">
					<field name="tutor" attrs="{'invisible':[('student','=',False)]}" domain="[('teacher','=', True)]"/>
					<field name="start_year" colspan="2" attrs="{'invisible':[('student','=',False)]}"/>
					<field name="mailucav" colspan="2" attrs="{'invisible':[('student','=',False)]}"/>
					<field name="swfile" colspan="2" attrs="{'invisible':[('student','=',False)]}"/>
					<field name="year_start_ucav" colspan="2" attrs="{'invisible':[('student','=',False)]}"/>
					<field name="identification_type" colspan="2" attrs="{'invisible':[('student','=',False)]}"/>
					<field name="birthplace" colspan="2" attrs="{'invisible':[('student','=',False)]}"/>
					<field name="birthstate" colspan="2" attrs="{'invisible':[('student','=',False)]}"/>
					<field name="nationality" colspan="2" attrs="{'invisible':[('student','=',False)]}"/>
					<field name="residence_address" colspan="2" attrs="{'invisible':[('student','=',False)]}"/>
					<field name="residence_city" colspan="2" attrs="{'invisible':[('student','=',False)]}"/>
					<field name="residence_zip" colspan="2" attrs="{'invisible':[('student','=',False)]}"/>
					<field name="telephone2" colspan="2" attrs="{'invisible':[('student','=',False)]}"/>
					<field name="type_access" colspan="2" attrs="{'invisible':[('student','=',False)]}"/>
					<field name="type_access_ucav" colspan="2" attrs="{'invisible':[('student','=',False)]}"/>
					<!--<field name="student_titulation" colspan="2" attrs="{'invisible':[('student','=',False)]}"/>-->
					<field name="ref_secundary" colspan="2" attrs="{'invisible':[('student','=',False)]}"/>
					<field name="distrito" colspan="2" attrs="{'invisible':[('student','=',False)]}"/>
					<field name="selectivity_call" colspan="2" attrs="{'invisible':[('student','=',False)]}"/>
					<field name="selectivity_mark" colspan="2" attrs="{'invisible':[('student','=',False)]}"/>
					<field name="work" colspan="2" attrs="{'invisible':[('student','=',False)]}"/>
					<field name="swleft" colspan="2" attrs="{'invisible':[('student','=',False)]}"/>
					<field name="left_reason" colspan="2" attrs="{'invisible':[('student','=',False)]}"/>
					<field name="swresguardo" colspan="2" attrs="{'invisible':[('student','=',False)]}"/>
					<field name="uniresguardo" colspan="2" attrs="{'invisible':[('student','=',False)]}"/>
					<field name="swtraslado" colspan="2" attrs="{'invisible':[('student','=',False)]}"/>
					<field name="date_traslado" colspan="2" attrs="{'invisible':[('student','=',False)]}"/>
					<field name="swresguardo2" colspan="2" attrs="{'invisible':[('student','=',False)]}"/>
					<field name="uniresguardo2" colspan="2" attrs="{'invisible':[('student','=',False)]}"/>
					<field name="swtraslado2" colspan="2" attrs="{'invisible':[('student','=',False)]}"/>
					<field name="date_traslado2" colspan="2" attrs="{'invisible':[('student','=',False)]}"/>
					<field name="idunidest" colspan="2" attrs="{'invisible':[('student','=',False)]}"/>
					<field name="large_family" colspan="2" attrs="{'invisible':[('student','=',False)]}"/>
					<field name="type_large_family" colspan="2" attrs="{'invisible':[('student','=',False)]}"/>
					<field name="centroensmedia" colspan="2" attrs="{'invisible':[('student','=',False)]}"/>
					<field name="naturalezaensmedia" colspan="2" attrs="{'invisible':[('student','=',False)]}"/>
					<!--<field name="cityensmedia" colspan="2" attrs="{'invisible':[('student','=',False)]}"/>-->
					<field name="countryensmedia" colspan="2" attrs="{'invisible':[('student','=',False)]}"/>
					<!--<field name="stateensmedia" colspan="2" attrs="{'invisible':[('student','=',False)]}"/>-->
					<field name="especialidadingresouni" colspan="2" attrs="{'invisible':[('student','=',False)]}"/>
	
				</xpath>
				<xpath expr="//page[@string='Extra Information']" position="after">
					<page string="Parents" attrs="{'invisible':[('student','=',False)]}">
						<group colspan="4" col="12">
							<separator string="Father" colspan="12"/>
							<field name="swalivef" colspan="2" />
							<newline/>
							<field name="father_name" colspan="6"/>
							<newline/>
							<field name="father_studies" colspan="6"/>
							<newline/>
							<field name="father_profession" colspan="6"/>
							
						</group>
						<group colspan="4" col="12">
							<separator string="Mother" colspan="12"/>
							<field name="swalivem" colspan="2" />
							<newline/>
							<field name="mother_name" colspan="6"/>
							<newline/>
							<field name="mother_studies" colspan="6"/>
							<newline/>
							<field name="mother_profession" colspan="6"/>
							
						</group>
					</page>
					<page string="Authorized People" attrs="{'invisible':[('student','=',False)]}">
						<field name="authorized_person_ids" nolabel="1" />
					</page>
				</xpath>
				<xpath expr="//page[@string='CVN']" position="attributes">
					<attribute name="attrs">{'invisible':[('teacher','=',False)]}</attribute>
				</xpath>
			</field>
		</record>

		<record model="ir.ui.view" id="res_partner_contact_view_inh2">
			<field name="name">res.partner.contact.view.inh2</field>
			<field name="model">res.partner.contact</field>
			<field name="type">form</field>
			<field name="inherit_id"
				ref="avanzosc_training_suspcr.res_partner_contact_view_inh" />
			<field name="arch" type="xml">
				<xpath expr="//page[@string='Records']" position="attributes">
					<attribute name="attrs">{'invisible':[('student','=',False)]}</attribute>
				</xpath>
			</field>
		</record>

		<record model="ir.ui.view" id="res_partner_contact_view_inh3">
			<field name="name">res.partner.contact.view.inh3</field>
			<field name="model">res.partner.contact</field>
			<field name="type">form</field>
			<field name="inherit_id"
				ref="training.res_partner_contact_form_inherit" />
			<field name="arch" type="xml">
				<xpath expr="//page[@string='Linguistic Skills']" position="replace">
				</xpath>
			</field>
		</record>
		
		<record model="ir.ui.view" id="res_partner_contact_view_inh4">
			<field name="name">res.partner.contact.view.inh4</field>
			<field name="model">res.partner.contact</field>
			<field name="type">form</field>
			<field name="inherit_id"
				ref="training.contact_form" />
			<field name="arch" type="xml">
				<xpath expr="//page[@string='Courses']" position="replace">
				</xpath>
			</field>
		</record>
	</data>
</openerp>
