<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<!--
		======================================================================== 
			AUTHORIZED.PERSON 
		======================================================================== 
		-->

		<!-- TREE -->
		<record model="ir.ui.view" id="authorized_person_tree_view">
			<field name="name">authorized.person.tree.view</field>
			<field name="model">authorized.person</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Authorized People">
					<field name="nif" />
					<field name="last_name" />
					<field name="last_name_two" />
				</tree>
			</field>
		</record>

		<!-- FORM -->
		<record model="ir.ui.view" id="authorized_person_form_view">
			<field name="name">authorized.person.form.view</field>
			<field name="model">authorized.person</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Authorized People">
					<field name="nif" />
					<field name="last_name" />
					<field name="last_name_two" />
					<field name="name" />
				</form>
			</field>
		</record>
	</data>
</openerp>
	