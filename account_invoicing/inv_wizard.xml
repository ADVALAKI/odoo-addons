<?xml version="1.0"?>
<openerp>
	<data>
		<wizard
			string="Run agreement"
			id="inv_agr_run"
			model="inv.agreement"
			name="inv.agreement.wizard"
			menu="False"/>
		
		<!-- 	=================== Wizard Proccess Methodologies =============	 -->
			
		<record id="view_meth_mess_form" model="ir.ui.view">
			<field name="name">view.meth.mess.form</field>
			<field name="model">inv.method.wizard</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Process Methodologies">
					<separator string="Process Methodologies?" colspan="4" />
					<group colspan="4">
						<button icon="gtk-cancel" special="cancel" string="Cancel" colspan="2"/>
						<button icon="gtk-ok" name="action_create_meth" string="Process"
							type="object" colspan="2" />
					</group>
				</form>
			</field>
		</record>

		<record id="action_meth_procs" model="ir.actions.act_window">
			<field name="name">Proccess Methodologies</field>
			<field name="res_model">inv.method.wizard</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="view_meth_mess_form" />
			<field name="target">new</field>
		</record>
	
		<record id="action_menu_process_methods" model="ir.values">
			<field name="model_id" ref="model_inv_method" />
			<field name="name">Proccess Methodologies</field>
			<field name="key2">client_action_multi</field>
			<field name="value"
				eval="'ir.actions.act_window,' + str(ref('action_meth_procs'))" />
			<field name="key">action</field>
			<field name="model">inv.method</field>
		</record>
		
		
		<!-- 	=================== Wizard Proccess Agreements ============		-->
			
		<record id="view_agree_proc_form" model="ir.ui.view">
			<field name="name">view.agree.proc.form</field>
			<field name="model">proc.agreement.wizard</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Process Agreements">
					<separator string="Process Agreements?" colspan="4" />
					<group colspan="4">
						<button icon="gtk-cancel" special="cancel" string="Cancel" colspan="2"/>
						<button icon="gtk-ok" name="action_process_agree" string="Process"
							type="object" colspan="2" />
					</group>
				</form>
			</field>
		</record>

		<record id="action_agree_procs" model="ir.actions.act_window">
			<field name="name">Proccess Agreements</field>
			<field name="res_model">proc.agreement.wizard</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="view_agree_proc_form" />
			<field name="target">new</field>
		</record>
	
		<record id="action_menu_process_agreements" model="ir.values">
			<field name="model_id" ref="model_inv_agreement" />
			<field name="name">Proccess Agreement</field>
			<field name="key2">client_action_multi</field>
			<field name="value"
				eval="'ir.actions.act_window,' + str(ref('action_agree_procs'))" />
			<field name="key">action</field>
			<field name="model">inv.agreement</field>
		</record>
		
		<!-- 	=================== Wizard Stop Agreements ============		-->
			
		<record id="view_agree_stop_form" model="ir.ui.view">
			<field name="name">view.agree.stop.form</field>
			<field name="model">proc.agreement.wizard</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Stop Agreements">
					<separator string="Stop Agreements?" colspan="4" />
					<group colspan="4">
						<button icon="gtk-cancel" special="cancel" string="Cancel" colspan="2"/>
						<button icon="gtk-ok" name="action_stop_agree" string="Stop"
							type="object" colspan="2" />
					</group>
				</form>
			</field>
		</record>

		<record id="action_agree_stop" model="ir.actions.act_window">
			<field name="name">Stop Agreements</field>
			<field name="res_model">proc.agreement.wizard</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="view_agree_stop_form" />
			<field name="target">new</field>
		</record>
	
		<record id="action_menu_stop_agreements" model="ir.values">
			<field name="model_id" ref="model_inv_agreement" />
			<field name="name">Stop Agreement</field>
			<field name="key2">client_action_multi</field>
			<field name="value"
				eval="'ir.actions.act_window,' + str(ref('action_agree_stop'))" />
			<field name="key">action</field>
			<field name="model">inv.agreement</field>
		</record>
		
		<!-- 	=================== Wizard Draft Agreements ============		-->
			
		<record id="view_agree_draft_form" model="ir.ui.view">
			<field name="name">view.agree.draft.form</field>
			<field name="model">proc.agreement.wizard</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Stop Agreements">
					<separator string="Draft Agreements?" colspan="4" />
					<group colspan="4">
						<button icon="gtk-cancel" special="cancel" string="Cancel" colspan="2"/>
						<button icon="gtk-ok" name="action_draft_agree" string="Draft"
							type="object" colspan="2" />
					</group>
				</form>
			</field>
		</record>

		<record id="action_agree_draft" model="ir.actions.act_window">
			<field name="name">Draft Agreements</field>
			<field name="res_model">proc.agreement.wizard</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="view_agree_draft_form" />
			<field name="target">new</field>
		</record>
	
		<record id="action_menu_draft_agreements" model="ir.values">
			<field name="model_id" ref="model_inv_agreement" />
			<field name="name">Draft Agreement</field>
			<field name="key2">client_action_multi</field>
			<field name="value"
				eval="'ir.actions.act_window,' + str(ref('action_agree_draft'))" />
			<field name="key">action</field>
			<field name="model">inv.agreement</field>
		</record>
									
	</data>
</openerp>
