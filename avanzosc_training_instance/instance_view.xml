<?xml version="1.0" encoding="UTF-8"?>

<openerp>
	<data>

	<!--
	========================================================================
    Instance
    ========================================================================
    -->
     
		<!-- TREE -->
		
		<record model="ir.ui.view" id="instance_tree_view">
			<field name="name">instance.tree.view</field>
			<field name="model">instance</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Instances">
					<field name="instance_number" />
					<field name="date" />
					<field name="document_date" />
					<field name="instance_type_id" />
					<field name="document_id" />
					<field name="source" />
					<field name="sender" />
					<field name="extract" />
					<field name="active" />
					<field name="contact_id" />
				</tree>
			</field>
		</record>

		<!-- FORM -->

		<record model="ir.ui.view" id="instance_form_view">
			<field name="name">instance.form.view</field>
			<field name="model">instance</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Instances">
					<field name="instance_number" />
					<field name="date" />
					<field name="document_date" />
					<field name="instance_type_id" />
					<field name="document_id" />
					<field name="source" />
					<field name="sender" />
					<field name="active" />
					<field name="contact_id" />
					<separator colspan="4" string="Extract"/>
					<field name="extract" colspan="4" nolabel="1"/>
				</form>
			</field>
		</record>
		
		<!-- SEARCH -->
		
		<record id="instance_search_view" model="ir.ui.view">
            	<field name="name">instance.search.view</field>
            	<field name="model">instance</field>
            	<field name="type">search</field>
            	<field name="arch" type="xml">
            		<search string="Search for Instances">
            			<group col="15" colspan="4">
            			    <field name="instance_number" />
            			    <field name="date" />
							<field name="document_date" />
							<field name="instance_type_id" />
							<field name="document_id" />
							<newline/>
							<field name="source" />
							<field name="sender" />
							<field name="active" />
							<field name="contact_id" />
            			    <field name="extract"/>
            			</group>         			
            		</search>
            	</field>
        </record>
	<!--
	========================================================================
    Document
    ========================================================================
    -->
    <!-- TREE -->
		
		<record model="ir.ui.view" id="document_tree_view">
			<field name="name">document.tree.view</field>
			<field name="model">document</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Documents">
					<field name="name" />
				</tree>
			</field>
		</record>

		<!-- FORM -->

		<record model="ir.ui.view" id="document_form_view">
			<field name="name">document.form.view</field>
			<field name="model">document</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Documents">
					<field name="name" />
					<field name="instance_ids" nolabel="1" colspan="4"/>
				</form>
			</field>
		</record>
		
		<!-- SEARCH -->
		
		<record id="document_search_view" model="ir.ui.view">
            	<field name="name">document.search.view</field>
            	<field name="model">document</field>
            	<field name="type">search</field>
            	<field name="arch" type="xml">
            		<search string="Search for Documents">
            			<group col="15" colspan="4">
            			    <field name="name" />
            			</group>         			
            		</search>
            	</field>
        </record>
        
    <!--
	========================================================================
    Instance Type
    ========================================================================
    -->
    <!-- TREE -->
		
		<record model="ir.ui.view" id="instance_type_tree_view">
			<field name="name">instance_type.tree.view</field>
			<field name="model">instance.type</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Instance Types">
					<field name="name" />
				</tree>
			</field>
		</record>

		<!-- FORM -->

		<record model="ir.ui.view" id="instance_type_form_view">
			<field name="name">instance.type.form.view</field>
			<field name="model">instance.type</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Instance Type">
					<field name="name" />
					<field name="instance_ids" nolabel="1" colspan="4"/>
				</form>
			</field>
		</record>
		
		<!-- SEARCH -->
		
		<record id="instance_type_search_view" model="ir.ui.view">
            	<field name="name">instance.type.search.view</field>
            	<field name="model">instance.type</field>
            	<field name="type">search</field>
            	<field name="arch" type="xml">
            		<search string="Search for Instances">
            			<group col="15" colspan="4">
            			    <field name="name" />
            			</group>         			
            		</search>
            	</field>
        </record>
    
	<!--
	========================================================================
    Actions
    ========================================================================
     -->
		<record id="act_instance" model="ir.actions.act_window">
			<field name="name">Instances</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">instance</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>
		<!--
	========================================================================
    Menu
    ========================================================================
     -->
		<menuitem id="instance_group_menu" name="Instances"
			parent="training.training_mi" sequence="10" />
	
		<menuitem id="instance_menu" name="Instances"
			parent="instance_group_menu" action="act_instance" />
	</data>
</openerp>