<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
	
<!-- ================ Crm Lead View - Opportunies ================= -->

	<record id="crm_case_tree_view_oppor_inherit" model="ir.ui.view">
		<field name="name">Opportunities Tree.inherit</field>
		<field name="model">crm.lead</field>
		<field name="inherit_id" ref="crm.crm_case_tree_view_oppor" />
		<field name="arch" type="xml">
			<data>
				<xpath expr="/tree/field[@name='date_deadline']" position="after">
					<field name="date_action_last" invisible="1" />
					<field name="write_date" invisible="1" />
					<field name="partner_address_id" invisible="1" />
				</xpath>
			</data>
		</field>
	</record>
	
	<record id="view_crm_case_opportunities_filter_inherit" model="ir.ui.view">
		<field name="name">CRM - Opportunities.inherit</field>
		<field name="model">crm.lead</field>
		<field name="inherit_id" ref="crm.view_crm_case_opportunities_filter" />
		<field name="arch" type="xml">
			<data>
				<xpath expr="/search/field[@name='section_id']" position="after">
					<field name="partner_address_id"
                        domain="[]" context="{}" />
				</xpath>
				<xpath expr="/search/group/filter[@string='Creation']" position="after">
                    <filter string="Last Action" help="Last Action" icon="terp-go-month"
                        domain="[]" context="{'group_by':'date_action_last'}" />
                    <filter string="Update Date" icon="terp-go-month"
                        domain="[]" context="{'group_by':'write_date'}" />
				</xpath>
			</data>
		</field>
	</record>
	
	<!-- ================ Crm Lead View - Initiatives ================= -->
	
	<record id="crm_case_tree_view_leads_inherit" model="ir.ui.view">
		<field name="name"> Leads inherit</field>
		<field name="model">crm.lead</field>
		<field name="inherit_id" ref="crm.crm_case_tree_view_leads" />
		<field name="arch" type="xml">
			<data>
				<xpath expr="/tree/field[@name='date_deadline']" position="after">
					 <field name="date_action_last" invisible="1"/>
					 <field name="write_date" invisible="1"/>
					 <field name="partner_address_id" invisible="1"/>
				</xpath>
			</data>
		</field>
	</record>
	
	<record id="view_crm_case_leads_filter_inherit" model="ir.ui.view">
		<field name="name">CRM - Leads Search.inherit</field>
		<field name="model">crm.lead</field>
		<field name="inherit_id" ref="crm.view_crm_case_leads_filter" />
		<field name="arch" type="xml">
			<data>
				<xpath expr="/search/field[@name='section_id']" position="after">
					<field name="partner_address_id"
                        domain="[]" context="{}" />
				</xpath>
				<xpath expr="/search/group/filter[@string='Creation']" position="after">
                    <filter string="Last Action" help="Last Action" icon="terp-go-month"
                        domain="[]" context="{'group_by':'date_action_last'}" />
                    <filter string="Update Date" icon="terp-go-month"
                        domain="[]" context="{'group_by':'write_date'}" />
				</xpath>
			</data>
		</field>
		
	</record>
	</data>
</openerp>