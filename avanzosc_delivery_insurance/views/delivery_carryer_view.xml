
<openerp>
    <data>
        <record id="view_delivery_carrier_form_inherit" model="ir.ui.view">
                <field name="name">view.delivery.carrier.form.inherit</field>
                <field name="model">delivery.carrier</field>
                <field name="type">form</field>
                <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
                <field name="arch" type="xml">
                    <field name="amount" position="after">
                    <group colspan="8" col="8">
                        <field name="insurance"/>
                        <field name="insurance_type" attrs="{'invisible':[('insurance','=', False)]}"/>
                        <field name="insurance_amount" attrs="{'invisible':['|',('insurance','=', False),('insurance_type','=','sale_price')]}"/>
                        <field name="insurance_percentage" attrs="{'invisible':['|',('insurance','=', False),('insurance_type','=','fixed')]}"/>
                    </group>
                    </field>
                </field>
        </record>
    </data>
</openerp>
