<openerp>
    <data>
    
    <!-- Import Inventory Wizard form -->

          <record id="view_import_inventory" model="ir.ui.view">
            <field name="name">import.inventory.form</field>
            <field name="model">import.inventory</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Import Inventory">
                <separator string="In the file must be 2 columns keys with name 'default_code' => for product referente and 'sto_qty' => for product quantity" colspan="4"/>
                    <group colspan="4" col="6">
                    	<field name="name"  colspan="4" />
                        <field name="data" filename="name" colspan="2"  />
                         <field name="delimeter" colspan="1"/>
                         <field name="location" colspan="4" />
                          
                    </group>
                   <separator string="" colspan="4"/>
                   <group colspan="4" col="6">
                        <button  icon="gtk-cancel" special="cancel" string="Cancel"/>
                        <button  icon="gtk-ok" name="action_import" string="Import" type="object"/>
                   </group>
               </form>
            </field>
        </record>
        
