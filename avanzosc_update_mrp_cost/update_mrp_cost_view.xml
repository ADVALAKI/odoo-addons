<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    		<record model="ir.ui.view" id="product_inh_mrp_fields_form_view">
                <field name="name">product.inh.mrp.fields.form</field>
                <field name="model">product.product</field>
                <field name="type">form</field>
                <field name="inherit_id" ref="avanzosc_product_extended.product_inh_new_fields_form_view"/>
                <field name="arch" type="xml">
                    <xpath expr="/form/notebook/page/group/group/field[@name='standard_cost']" position="before">
	                    		<field name="last_manufacturing_cost"/>
	                    		<field name="last_manufacturing_end_date"/>  
                    </xpath>                   
                </field>
            </record>
            
             <record model="ir.ui.view" id="product_inh_mrp_fields_tree_view">
                <field name="name">product.inh.mrp.fields.tree</field>
                <field name="model">product.product</field>
                <field name="type">tree</field>
                <field name="inherit_id" ref="product.product_product_tree_view"/>
                <field name="arch" type="xml">
                    <field name="qty_available" position="before">
                   		<field name="last_manufacturing_cost"/>
	                    <field name="last_manufacturing_end_date"/>  
                    </field>                   
                </field>
            </record>
    </data>
</openerp>