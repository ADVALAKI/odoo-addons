		<!-- DEFINIMOS LA VISTA DEL CVN -->

		<!-- TREE -->
		
		<record model="ir.ui.view" id="cvn_tree_view">
			<field name="name">cvn.tree.view</field>
			<field name="model">res.partner.contact</field>
			<field name="type">tree</field>
			<field name="inherit_id" ref="base_contact_vat.res_partner_contact_tree_view_vat" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='vat']" position="replace">
					<field name="identification_doc"/>
				</xpath>
				<!-- <xpath expr="//field[@name='function']" position="replace">
				</xpath> -->
			</field>
		</record>
		
		<!-- SEARCH -->
		
		<record model="ir.ui.view" id="cvn_search_view">
			<field name="name">cvn.search.view</field>
			<field name="model">res.partner.contact</field>
			<field name="type">search</field>
			<field name="inherit_id" ref="base_contact_vat.res_partner_contact_search_view_vat" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='vat']" position="replace">
					<field name="identification_doc"/>
				</xpath>
			</field>
		</record>

		<!-- FORM -->

		<record model="ir.ui.view" id="cvn_form_view">
			<field name="name">cvn.form.view</field>
			<field name="model">res.partner.contact</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="base_contact.view_partner_contact_form" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='title']" position="replace">
                </xpath>
                <xpath expr="//field[@name='first_name']" position="replace">
                </xpath>
				<xpath expr="//field[@name='name']" position="replace">
					<group colspan="4" col="22">
						<field name="title" widget="selection" domain="[('domain', '=', 'contact')]" coslpan="2"/>
						<field name="name" required="0" colspan="6"/>
						<field name="lastname_two" colspan="6"/>
						<field name="first_name" colspan="6"/>
          			</group>
                </xpath>
				<!-- <xpath expr="//field[@name='first_name']" position="after">
                    <field name="partner_id" invisible="1" select="1"/>
                    <field name="function" invisible="1" />
                </xpath> -->
				<xpath expr="//field[@name='mobile']" position="before">
					<field name="address" />
					<field name="zip" />
					<field name="city" />
					<field name="residence_country" />
	                <field name="community" />
	                <field name="residence_state_id" domain="[('country_id', '=', residence_country)]"/>
					<field name="telephone" />
					<field name="fax" />
				</xpath>
				<xpath expr="//field[@name='lang_id']" position="after">
					<field name="country" />
					<field name="state_id" domain="[('country_id', '=', country)]"/>		
				</xpath>
				<xpath expr="//field[@name='active']" position="after">
					<field name="sex" />
				</xpath>
				<xpath expr="//page[@string='Extra Information']" position="after">
					<page string="CVN">
						<notebook colspan="4">
							<page string="Working Life" >
								<field name="position_ids" nolabel="1" />
							</page>
							<page string="Titulations" >
								<notebook colspan="4">
									<page string="University Degrees">
										<group colspan="4">
											<field name="degree_ids" nolabel="1" />
										</group>
										<group colspan="4">
											<field name="doctorate_ids" nolabel="1" />
										</group>
									</page>
									<page string="Other Courses">
										<group colspan="4">
											<field name="course_ids" nolabel="1" />
										</group>
									</page>
								</notebook>
							</page>
							<page string="Teaching Experience" >
								<notebook colspan="4">
									<page string="Teachings">
										<field name="teaching_ids" nolabel="1" />
									</page>
									<page string="Thesis Directions">
										<field name="thesis_direction_ids" nolabel="1" />
									</page>
									<page string="Teaching Materials">
										<field name="teaching_material_ids" nolabel="1" />
									</page>
									<page string="Innovation Projects">
										<field name="innovation_project_ids" nolabel="1" />
									</page>
									<page string="Congresses">
										<field name="congress_ids" nolabel="1" />
									</page>
								</notebook>
							</page>
							<page string="Scientific and technological experience" >
								<group colspan="4">
									<field name="project_participation_ids" nolabel="1" />
								</group>
								<group colspan="4">
									<field name="artistic_work_ids" nolabel="1" />
								</group>
							</page>
							<page string="Scientific and technological activities" >
								<notebook colspan="4">
									<page string="Scientific Production">
										<group colspan="4">
											<field name="publication_ids" nolabel="1" />
										</group>
										<group colspan="4">
											<field name="congress_work_ids" nolabel="1" />
										</group>
										<group colspan="4">
											<field name="course_work_ids" nolabel="1" />
										</group>
										<group colspan="4">
											<field name="other_activity_ids" nolabel="1" />
										</group>
									</page>
									<page string="Other Merits">
										<group colspan="4">
											<field name="rd_center_stay_ids" nolabel="1" />
										</group>
										<group colspan="4">
											<field name="aid_ids" nolabel="1" />
										</group>
										<group colspan="4">
											<field name="prize_ids" nolabel="1" />
										</group>
										<group colspan="4">
											<field name="recognition_ids" nolabel="1" />
										</group>
										<group colspan="4">
											<field name="other_merit_ids" nolabel="1" />
										</group>
									</page>
								</notebook>
							</page>
						</notebook>
					</page>
				</xpath>
			</field>
		</record>
		
