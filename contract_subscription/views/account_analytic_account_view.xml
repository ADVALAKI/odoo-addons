<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="account_analytic_account_view_tree" model="ir.ui.view">
        <field name="model">account.analytic.account</field>
        <field name="inherit_id" ref="contract.view_account_analytic_account_journal_tree" />
        <field name="arch" type="xml">
            <field name="journal_id" position="after">
                <field name="invoice_project_id" invisible="True" />
            </field>
        </field>
    </record>

    <record id="account_analytic_account_view_form" model="ir.ui.view">
        <field name="model">account.analytic.account</field>
        <field name="inherit_id" ref="contract.account_analytic_account_recurring_form_form" />
        <field name="arch" type="xml">
            <field name="contract_template_id" position="after">
                <field name="invoice_project_id" colspan="4" />
            </field>
        </field>
    </record>

    <record id="account_analytic_account_view_search" model="ir.ui.view">
        <field name="model">account.analytic.account</field>
        <field name="inherit_id" ref="contract.view_account_analytic_account_contract_search" />
        <field name="arch" type="xml">
            <field name="journal_id" position="after">
                <field name="invoice_project_id" />
            </field>
            <filter name="recurring_invoices" position="after">
                <filter name="invoice_project" string="Invoice to Project"
                        domain="[('invoice_project_id','!=',True)]"/>
            </filter>
        </field>
    </record>
</odoo>
