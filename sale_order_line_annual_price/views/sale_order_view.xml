<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_order_form_inh_annual_price" model="ir.ui.view">
            <field name="name">view.order.form.inh.annual.price</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_order_line_service_view.view_order_form_inh_service_view" />
            <field name="arch" type="xml">
                <xpath expr="//tree[@string='SERVICE sales order lines']/field[@name='price_subtotal']" position="after">
                    <field name="weekly_amount"  sum="Weekly amount"/>
                    <field name="monthly_amount" sum="Monthly amount"/>
                    <field name="annual_amount" sum="Annual amount"/>
                    <field name="monthly_quota" />
                    <field name="weekly_hours"  sum="Weekly hours" widget="float_time" />
                    <field name="monthly_hours" sum="Monthly hours" widget="float_time" />
                    <field name="annual_hours" sum="Annual hours" widget="float_time" />
                </xpath>
            </field>
        </record>
    </data>
</openerp>
