<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record id="stock_location_virola_form_view_inherit" model="ir.ui.view">
			<field name="name">stock.location.virola.form</field>
			<field name="model">stock.location</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="stock.view_location_form" />
			<field name="arch" type="xml">
			<data>
				<xpath expr="/form/group/field[@name='location_id']" position="after">
					<field name="virola" />
					<field name="capvirola"/>
				</xpath>
				
			</data>
				
			</field>
		</record>
		
		<record id="inventory_virola_form_view_inherit" model="ir.ui.view">
			<field name="name">inventory.virola.form</field>
			<field name="model">stock.inventory</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="stock.view_inventory_form" />
			<field name="arch" type="xml">
			<data>
				<xpath expr="/form/notebook/page/field[@name='inventory_line_id']/tree/field[@name='product_qty']" position="before">
					<field name="virola" on_change="onchange_virola(virola, location_id)"/>
				</xpath>	
				<xpath expr="/form/notebook/page/field[@name='inventory_line_id']/form/field[@name='product_qty']" position="before">
					<field name="virola" on_change="onchange_virola(virola, location_id)"/>
				</xpath>			
			</data>				
			</field>
		</record>
		
	</data>
</openerp>