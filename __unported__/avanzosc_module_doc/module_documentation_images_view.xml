<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	<record model="ir.ui.view" id="extra_doc_image_form_view">
    	    <field name="name">module.doc.image.form</field>
    	    <field name="model">module.doc.image</field>
    	    <field name="type">form</field>
    	    <field name="arch" type="xml">
    	        <form string="Documentation image">
    	            <field name="name"/>
    	            <field name="filename"/>
    	            <!-- field name="img_file"/-->
    	            <separator string="Preview (Only when saved)" colspan="4" />
					<field name="preview" widget="image" nolabel="1" colspan="4"/>
    	        </form>
    	    </field>
    	</record>
    	
    	<record model="ir.ui.view" id="extra_doc_image_tree_view">
    	    <field name="name">module.doc.image.tree</field>
    	    <field name="model">module.doc.image</field>
    	    <field name="type">tree</field>
    	    <field name="arch" type="xml">
    	        <tree string="Documentation image">
    	            <field name="name"/>
    	            <field name="filename"/>
    	            <!-- field name="img_file"/-->
    	        </tree>
    	    </field>
    	</record>
    
    </data>
</openerp>