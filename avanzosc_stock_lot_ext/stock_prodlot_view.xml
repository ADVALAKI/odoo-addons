<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<!--
			================================ 
			Stock Production Lot Form Inheritance
			================================
		-->

		<record id="view_production_lot_form_inherit" model="ir.ui.view">
			<field name="name">stock.production.lot.inherit</field>
			<field name="model">stock.production.lot</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="stock.view_production_lot_form" />
			<field name="arch" type="xml">
				<xpath expr="/form/group/field[@name='name']" position="after">
					<field name="explotation" />
					<field name="color" />
				</xpath>
			</field>
		</record>

	</data>
</openerp>