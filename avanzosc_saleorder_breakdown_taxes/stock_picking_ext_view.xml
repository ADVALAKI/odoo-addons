<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	
		<record id="view_picking_out_form_inh_so_breakdowntaxes" model="ir.ui.view">
    	    <field name="name">view.picking.out.form.inh.so.breakdowntaxes</field>
			<field name="model">stock.picking</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="stock.view_picking_out_form" />
			<field name="arch" type="xml">
			    <xpath expr="/form/notebook/page[@string='Notes']" position="after">
	                <page string="Taxes Breakdown" >
	                    <separator colspan="4" string="Taxes"/>
	                    <field name="stock_picking_tax_breakdown_ids" colspan="4" nolabel="1" />
	                </page>
			    </xpath>
			</field>
    	</record>
    	 	
		<record id="view_picking_form_inh_so_breakdowntaxes" model="ir.ui.view">
    	    <field name="name">view.picking.form.inh.so.breakdowntaxes</field>
			<field name="model">stock.picking</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="stock.view_picking_form" />
			<field name="arch" type="xml">
			    <xpath expr="/form/notebook/page[@string='Notes']" position="after">
	                <page string="Taxes Breakdown" attrs="{'invisible': [('type','not in',('out'))]}">
	                    <separator colspan="4" string="Taxes"/>
	                    <field name="stock_picking_tax_breakdown_ids" colspan="4" nolabel="1" />
	                </page>
			    </xpath>
			</field>
    	</record>
    	

    </data>
</openerp>