<openerp>
	<data>
	
		<record id="view_invoice2draft" model="ir.ui.view">
            <field name="name">view.invoice2draft</field>
            <field name="model">wizard.invoice.draft</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Invoice to Draft">
                	<separator string="Set to draft State the selected Invoices?" colspan="4"/>	
                   <group colspan="4" col="6">
                        <button  icon="gtk-cancel" special="cancel" string="Cancel"/>
                        <button  icon="gtk-ok" name="invoice_draft" string="Ok" type="object"/>
                   </group>
               </form>
            </field>
        </record>
        
    	<act_window 
    		id= "invoice_draft"
			name= "Set invoices to draft state" 
			res_model= "wizard.invoice.draft"
			src_model= "account.invoice"
			key2= "client_action_multi"
			view_id = "view_invoice2draft"
			target ="new"
			 />

	</data>
</openerp>