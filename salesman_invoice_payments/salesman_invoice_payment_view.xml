<?xml version="1.0"?>
<openerp>
	<data>

		<record id="view_move_line_form_inh" model="ir.ui.view">
			<field name="name">view.move.line.form.inh</field>
			<field name="model">account.move.line</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="account.view_move_line_form" />
			<field name="arch" type="xml">
				<xpath expr="/form/group/field[@name='company_id']" position="after">
					<field name="user_id"/>
				</xpath>
			</field>
		</record>
		
		<record id="view_payments_tree_inh" model="ir.ui.view">
			<field name="name">view.payments.tree.inh</field>
			<field name="model">account.move.line</field>
			<field name="type">tree</field>
			<field name="inherit_id" ref="account_payment_extension.view_payments_tree" />
			<field name="arch" type="xml">
				<xpath expr="/tree/field[@name='partner_id']" position="after">
					<field name="user_id" attrs="{'invisible':[('invoice','=',None)]}"/>
				</xpath>
			</field>
		</record>
		
		<record id="view_payments_filter_inh" model="ir.ui.view">
			<field name="name">view.payments.filter.inh</field>
			<field name="model">account.move.line</field>
			<field name="type">search</field>
			<field name="inherit_id" ref="account_payment_extension.view_payments_filter" />
			<field name="arch" type="xml">
				<xpath expr="/search/group/field[@name='partner_id']" position="after">
					<field name="user_id" widget="selection"/>
				</xpath>
			</field>
		</record>
	
	</data>
</openerp>