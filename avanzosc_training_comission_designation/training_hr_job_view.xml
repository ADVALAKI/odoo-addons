     	 <!-- FORM -->
     
  		 <record model="ir.ui.view" id="hr_job_form_inh">
                <field name="name">hr.job.form.inh</field>
                <field name="model">hr.job</field>
                <field name="type">form</field>
                <field name="inherit_id" ref="hr_recruitment.hr_job_survey"/>
                <field name="arch" type="xml">
                	<xpath expr="//field[@name='survey_id']" position="replace" >
                	</xpath>
                	<xpath expr="//field[@name='department_id']" position="replace" >
                	</xpath>
                	<xpath expr="//page[@string='Employee']" position="replace" >
                		<page string="Members" >
							<field name="comission_designation_contact_ids" nolabel="1" colspan="4" />
							<field name="comission_designation_employee_ids" nolabel="1" colspan="4"/>
						</page>
                	</xpath>
                </field>
         </record>
         	
    <!--
	========================================================================
    Comission/Designation Contact
    ========================================================================
    -->
     
		<!-- TREE -->
		
		<record model="ir.ui.view" id="comission_designation_contact_tree_view">
			<field name="name">comission.designation.contact.tree.view</field>
			<field name="model">comission.designation.contact</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Comission/Designation Contacts">
					<field name="contact_id"/>
					<field name="hr_job_id"/>
					<field name="init_date" />
					<field name="end_date" />
					<field name="expiration_date" />
				</tree>
			</field>
		</record>

		<!-- FORM -->

		<record model="ir.ui.view" id="comission_designation_contact_form_view">
			<field name="name">comission.designation.contact.form.view</field>
			<field name="model">comission.designation.contact</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Comission/Designation">
					<field name="contact_id" domain="[('type', '!=', 'student')]"/>
					<field name="init_date" />
					<field name="end_date" />
					<field name="expiration_date" />
				</form>
			</field>
		</record>
		
		<!-- SEARCH -->
		
		<record id="comission_designation_contact_search_view" model="ir.ui.view">
            	<field name="name">comission.designation.contact.search.view</field>
            	<field name="model">comission.designation.contact</field>
            	<field name="type">search</field>
            	<field name="arch" type="xml">
            		<search string="Search for Comission/Designation">
            			<group col="15" colspan="4">
            			</group>         			
            		</search>
            	</field>
        </record>
        <!--
	========================================================================
    Comission/Designation Employee
    ========================================================================
    -->
     
		<!-- TREE -->
		
		<record model="ir.ui.view" id="comission_designation_employee_tree_view">
			<field name="name">comission.designation.employee.tree.view</field>
			<field name="model">comission.designation.employee</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Comission/Designation Employees">
					<field name="employee_id"/>
					<field name="hr_job_id"/>
					<field name="init_date" />
					<field name="end_date" />
					<field name="expiration_date" />
				</tree>
			</field>
		</record>

		<!-- FORM -->

		<record model="ir.ui.view" id="comission_designation_employee_form_view">
			<field name="name">comission.designation.employee.form.view</field>
			<field name="model">comission.designation.employee</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Comission/Designation">
					<field name="employee_id"/>
					<field name="init_date" />
					<field name="end_date" />
					<field name="expiration_date" />
				</form>
			</field>
		</record>
		
		<!-- SEARCH -->
		
		<record id="comission_designation_employee_search_view" model="ir.ui.view">
            	<field name="name">comission.designation.employee.search.view</field>
            	<field name="model">comission.designation.employee</field>
            	<field name="type">search</field>
            	<field name="arch" type="xml">
            		<search string="Search for Comission/Designation">
            			<group col="15" colspan="4">
            			</group>         			
            		</search>
            	</field>
        </record>
        
    <!--
	===========================================================
	 	ACTIONS 
	===========================================================
	-->
	
		<record id="act_hr_job_line_contact" model="ir.actions.act_window">
			<field name="name">Comission Designation Contact</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">comission.designation.contact</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>
		
		<record id="act_hr_job_line_employee" model="ir.actions.act_window">
			<field name="name">Comission Designation Employee</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">comission.designation.employee</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>
    
    <!--
	===========================================================
	 	MENUS 
	===========================================================
	-->
	
		<menuitem id="hr_job_line_contact" name="Hr Job lines Contacts"
			parent="base.menu_crm_case_job_req_main" action="act_hr_job_line_contact" />
	
		<menuitem id="hr_job_line_employee" name="Hr Job lines Employees"
			parent="base.menu_crm_case_job_req_main" action="act_hr_job_line_employee" />
        
    </data>
