<?xml version="1.0" encoding="UTF-8"?>

<openerp>
	<data>

	<!--
	========================================================================
    Authorized Person
    ========================================================================
     -->
     
		<!-- TREE -->
		
		<record model="ir.ui.view" id="comission_tree_view">
			<field name="name">comission.tree.view</field>
			<field name="model">comission</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Comissions">
					<field name="name" />
					<field name="expiration_date" />
					<field name="active" />
				</tree>
			</field>
		</record>

		<!-- FORM -->

		<record model="ir.ui.view" id="comission_form_view">
			<field name="name">comission.form.view</field>
			<field name="model">comission</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Comissions">
					<field name="name" />
					<field name="expiration_date" />
					<field name="active" />
					<group colspan="4">
						<field name="designation_ids" nolabel="1"/>
					</group>
				</form>
			</field>
		</record>
		
		<!-- SEARCH -->
		
		<record id="comission_search_view" model="ir.ui.view">
            	<field name="name">comission.search.view</field>
            	<field name="model">comission</field>
            	<field name="type">search</field>
            	<field name="arch" type="xml">
            		<search string="Search for Comission">
            			<group col="15" colspan="4">
            			    <filter string="Inactive" icon="terp-gdu-smart-failing" domain="[('active','=',0)]" />
            			    <separator orientation="vertical" />
            				<field name="name" />
            			</group>         			
            		</search>
            	</field>
        </record>
		
		<!--
	========================================================================
    Designation
    ========================================================================
     -->
     
		<!-- TREE -->
		
		<record model="ir.ui.view" id="designation_tree_view">
			<field name="name">designation.tree.view</field>
			<field name="model">designation</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Designations">
					<field name="comission_id" />
					<field name="contact_id" />
					<field name="name" />
					<field name="expiration_date" />
					<field name="active" />
				</tree>
			</field>
		</record>

		<!-- FORM -->

		<record model="ir.ui.view" id="designation_form_view">
			<field name="name">designation.form.view</field>
			<field name="model">designation</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Designations">
					<field name="comission_id" />
					<field name="contact_id" />
					<field name="name" />
					<field name="expiration_date" />
					<field name="active" />
				</form>
			</field>
		</record>
		
		<!-- SEARCH -->
		  
		<record id="designation_search_view" model="ir.ui.view">
            	<field name="name">designation.search.view</field>
            	<field name="model">designation</field>
            	<field name="type">search</field>
            	<field name="arch" type="xml">
            		<search string="Search for designation">
            			<group col="15" colspan="4">
            			    <filter string="Inactive" icon="terp-gdu-smart-failing" domain="[('active','=',0)]" />
            			    <separator orientation="vertical" />
            				<field name="comission_id" />
            				<field name="contact_id" />
            				<field name="name" />
            			</group>         			
            		</search>
            	</field>
        </record>
	<!--
	========================================================================
    Actions
    ========================================================================
     -->
		<record id="act_comission" model="ir.actions.act_window">
			<field name="name">Comissions</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">comission</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>
		
		<record id="act_designation" model="ir.actions.act_window">
			<field name="name">Designations</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">designation</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>
		<!--
	========================================================================
    Menu
    ========================================================================
     -->
		<menuitem id="comission_group_menu" name="Comissions and designations"
			parent="training.training_mi" sequence="10" />
	
		<menuitem id="comisssion_menu" name="Comissions"
			parent="comission_group_menu" action="act_comission" />
			
		<menuitem id="designation_menu" name="Designations"
			parent="comission_group_menu" action="act_designation" />
	</data>
</openerp>