<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_company_form_inh_historical" model="ir.ui.view" >
            <field name="name">view.company.form.inh.historical</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <notebook position="before">
                    <group colspan="4">
                        <field name="weekly_hours" widget="float_time" />
                        <group colspan="2" />
                    </group>
                </notebook>
            </field>
        </record>
        <record id="view_company_tree_inh_historical" model="ir.ui.view" >
            <field name="name">view.company.tree.inh.historical</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_tree"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="weekly_hours" widget="float_time" />
                </field>
            </field>
        </record>
    </data>
</openerp>
