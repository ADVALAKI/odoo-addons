<?xml version="1.0"?>
<openerp>
	<data>
		
		# -----------------------------------------------------------
		# Workflow (o la definición de la "entidad")
		# -----------------------------------------------------------
	
		<record model="workflow" id="wkf_title_shipping">
			<field name="name">training.title.shipping</field> <!-- Nombre del workflow -->
			<field name="osv">title.shipping</field> <!-- El workflow estará asociado a este modelo (objeto) -->
			<field name="on_create">True</field> <!-- Para que el workflow se cree cuando se crea el objeto -->
		</record>
		
		# -----------------------------------------------------------
		# Activities (o estados del workflow)
		# -----------------------------------------------------------
		
		<record model="workflow.activity" id="shipping_draft">
			<field name="wkf_id" ref="wkf_title_shipping" /> <!-- Referencia a la "entidad" de la que pertenece el estado -->
			<field name="flow_start">True</field> <!-- Indica que es un estado de inicio -->
			<field name="name">draft</field> <!-- Nombre del estado -->
			<field name="kind">function</field> <!-- Puede ser también "Dummy" (no hace nada) -->
			<field name="action">action_open()</field> <!-- Definición de la función que se va a ejecutar cuando un objeto llegue a este estado -->
		</record>
		
		<record model="workflow.activity" id="shipping_sent">
			<field name="wkf_id" ref="wkf_title_shipping" />
			<field name="flow_stop">True</field>
			<field name="name">sent</field>
			<field name="kind">function</field>
			<field name="action">action_send()</field>
		</record>

		# -----------------------------------------------------------
		# Transitions (transiciones)
		# -----------------------------------------------------------
		
		<record model="workflow.transition" id="trans_shipping_draft_sent">
			<field name="act_from" ref="shipping_draft" /> <!-- Estado de origen -->
			<field name="act_to" ref="shipping_sent" /> <!-- Estado de destino -->
			<field name="signal">button_send</field> <!-- Nombre de la señal para pasar la transición -->
		</record>
		
		<!-- <record model="workflow.transition" id="trans_closed_draft">
			<field name="act_from" ref="closed" />
			<field name="act_to" ref="draft" />
			<field name="signal">button_request</field>
		</record> -->
		
	</data>	
</openerp>		