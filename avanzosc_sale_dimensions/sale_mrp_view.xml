<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record model="ir.ui.view" id="view_order_form_inh">
			<field name="name">sale.order.form.mrp.inh</field>
			<field name="model">sale.order</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="sale.view_order_form" />
			<field name="arch" type="xml">
				<xpath expr="/form/notebook/page/field[@name='order_line']/form/notebook/page" position="inside">
					<button name="%(action_config_sale_line)d" string="Configure" icon="terp-tools" type="action"/>
				</xpath>
				<xpath expr="/form/notebook/page/group[2]" position="attributes">
					<attribute name="col">17</attribute>
					<attribute name="colspan">4</attribute>
				</xpath>
				<xpath expr="/form/notebook/page/group[2]" position="inside">
					<field name="configured" invisible="1"/>
					<group colspan="1" col="2" attrs="{'invisible':[('configured','=',True)]}">
						<button name="%(action_config_sale_line_all)d" states="configure" string="Configure All" type="action" icon="terp-tools"/>
					</group>
					<button name="button_finish" states="configure" string="Finish" type="object" icon="gtk-apply"/>
				</xpath>
			</field>
		</record>
	</data>
</openerp>