<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

		<!--==================================================================================================
			================================== DEGREE ========================================================
			==================================================================================================
		-->
		<!-- ================== FORM ====================== -->
		<record model="ir.ui.view" id="degree_form_view">
			<field name="name">degree.form.view</field>
			<field name="model">degree</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Degree Form">
				<separator string="Data 1"/>
				<group colspan="4">
					<field name="active" />
					<field name="numhours" />
					<field name="name" />
					<field name="letter" />
				</group>
				<separator string="Data 2"/>
				<group colspan="4">
					<field name="shortname" />
					<field name="numcursos" />
					<field name="impcredito" />
					<field name="title" />
					<field name="boe" />
				</group>
				<separator string="Description"/>
				<group colspan="4">
					<field name="textoboe" nolabel ="1"/>
				</group>
				</form>
			</field>
		</record>
		<!-- ================== TREE ====================== -->
		<record model="ir.ui.view" id="degree_tree_view">
			<field name="name">degree.tree.view</field>
			<field name="model">degree</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Degree Tree">
					<field name="name" />
					<field name="title" />
					<field name="numcursos" />
				</tree>
			</field>
		</record>

		<!-- ACCIONES -->
		<record model="ir.actions.act_window" id="action_degree_management_view">
			<field name="name">Degree</field>
			<field name="res_model">degree</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>
		<!-- /ACCIONES -->
		<!-- SUBMENU -->
		<menuitem id="degree_menu_view" name="Degree"
			parent="training.training_library_mi" action="action_degree_management_view" />
		<!-- /SUBMENU -->
		<!--==================================================================================================
			================================= /DEGREE ========================================================
			==================================================================================================
		-->
		
		<!--==================================================================================================
			================================ Course ADD Degree ===============================================
			==================================================================================================
		-->
		<!-- ================== FORM ====================== -->
		<record model="ir.ui.view" id="training_offer_form_inh">
                <field name="name">training.offer.form.inh</field>
                <field name="model">training.offer</field>
                <field name="type">form</field>
                <field name="inherit_id" ref="training.training_offer_form"/>
                <field name="arch" type="xml">
                        <field name="is_certification" position="before">
                        	<field name = "degree_ids"/>
                        </field>
                   
                </field>
            </record>
        <!--==================================================================================================
			=============================== /Course ADD Degree ===============================================
			==================================================================================================
		-->
		
		<!--==================================================================================================
			===================================== TITLES =====================================================
			==================================================================================================
		-->
		<!-- ================== FORM ====================== -->
		<record model="ir.ui.view" id="titles_form_view">
			<field name="name">titles.form.view</field>
			<field name="model">titles</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Title Form">
				<separator string="Titulos"/>
				<group colspan="4">
					<field name="title_ids" />
					<field name="name" />
				</group>
				</form>
			</field>
		</record>
		<!-- ================== TREE ====================== -->
		<record model="ir.ui.view" id="titles_tree_view">
			<field name="name">titles.tree.view</field>
			<field name="model">titles</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Title Tree">
					<field name="title_ids" />
					<field name="name" />
				</tree>
			</field>
		</record>

		<!-- ACCIONES -->
		<record model="ir.actions.act_window" id="action_titles_management_view">
			<field name="name">Titles</field>
			<field name="res_model">titles</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>
		<!-- /ACCIONES -->
		<!-- SUBMENU -->
		<menuitem id="titles_menu_view" name="Titles"
			parent="training.training_library_mi" action="action_titles_management_view" />
		<!-- /SUBMENU -->
		<!--==================================================================================================
			==================================== /TITLES =====================================================
			==================================================================================================
		-->
	</data>
</openerp>