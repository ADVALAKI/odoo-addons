<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
    <!--
		===========================================================
		Including extended fields on course seances
		===========================================================
		-->
		<!-- TREE -->
		<record model="ir.ui.view" id="training_seance_tree_inh">
            <field name="name">training.seance.tree.inh</field>
            <field name="model">training.seance</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="training.training_seance_tree" />
            <field name="arch" type="xml">
                <field name="name" position="after" >
                		<field name="coursenum_id"/>
                		<field name="semester"/>
						<field name="date_from"/>
						<field name="date_to"/>
                </field>
                <xpath expr="//tree/field[@name='duration']" position="replace"/>
            </field>
        </record>
        <!-- FORM -->
		<record model="ir.ui.view" id="training_seance_form_inh">
            <field name="name">training.seance.form.inh</field>
            <field name="model">training.seance</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="training.training_seance_form" />
            <field name="arch" type="xml">
                <field name="name" position="after" >
						<field name="date_from"/>
						<field name="date_to"/>
                </field> 
                <!--
                <xpath expr="//page[@string='Seance Description']/field[@name='course_id']" position="attributes" >
                	<attribute name = "onchange">onchange_course_id(course_id)</attribute>
                </xpath>  
    			-->
                <xpath expr="//page[@string='Seance Description']/field[@name='state_course']" position="before">
                	<field name="coursenum_id"/>
                	<field name="tipology"/>
                	<field name="semester"/>
                	<field name="credits"/>
                	<field name="offer_id"/>
                </xpath>
            </field>
        </record>
        <!-- 
        ========================================================================================
        	TRAINING.COURSE.OFFER.REL
        ========================================================================================
        -->
         <record model="ir.ui.view" id="training_offer_form_inh">
			<field name="name">training.offer.form.inh</field>
			<field name="model">training.offer</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="training.training_offer_form" />
			<field name="arch" type="xml">
                <xpath expr="/form/notebook/page[@string='Courses']/field[@name='course_ids']/form[@string='Course']/field[@name='course_id']" position="after">					
						<field name="tipology"/>
						<field name="name"/>
				</xpath>	
                <xpath expr="/form/notebook/page[@string='Courses']/field[@name='course_ids']/tree[@string='Courses']/field[@name='course_id']" position="after">					
						<field name="tipology"/>
						<field name="name"/>
				</xpath>				
			</field>
		</record>
        
	</data>
</openerp>
