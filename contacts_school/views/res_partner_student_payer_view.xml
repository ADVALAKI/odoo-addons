<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_partner_student_payer_tree_view" model="ir.ui.view">
        <field name="name">res.partner.student.payer.tree.view</field>
        <field name="model">res.partner.student.payer</field>
        <field name="arch" type="xml">
            <tree string="Students payers">
                <field name="student_id" />
                <field name="partner_id" />
                <field name="education_category" />
                <field name="percentage" />
                <field name="payment_term_id" />
                <field name="bank_id" />
            </tree>
        </field>
    </record>
    <record id="res_partner_student_payer_search_view" model="ir.ui.view">
        <field name="name">res.partner.student.payer.search.view</field>
        <field name="model">res.partner.student.payer</field>
        <field name="arch" type="xml">
            <search string="Search students payers">
                <field name="student_id" />
                <field name="partner_id" />
                <field name="education_category" />
                <field name="payment_term_id" />
                <field name="bank_id" />
                <group expand="1" string="Group By">
                    <filter string="Student" name="student"
                            domain="[]" context="{'group_by':'student_id'}"/>
                    <filter string="Payer" name="type_payer"
                            domain="[]" context="{'group_by':'partner_id'}"/>
                    <filter string="Educational category" name="type_category"
                            domain="[]" context="{'group_by':'education_category'}"/>
                    <filter string="Payment Terms" name="payment_term"
                            domain="[]" context="{'group_by':'payment_term_id'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="res_partner_student_payer_form_view" model="ir.ui.view">
        <field name="name">res.partner.student.payer.form.view</field>
        <field name="model">res.partner.student.payer</field>
        <field name="arch" type="xml">
            <form string="Student payer">
                <sheet>
                    <group name="head" colspan="4">
                        <group>
                            <field name="student_id" />
                            <field name="percentage" />
                        </group>
                        <group>
                            <field name="partner_id" required="1"
                                domain="[('id','in', allowed_family_ids)]"/>
                            <field name="education_category" />
                            <field name="payment_term_id" readonly="1"/>
                            <field name="bank_id" 
                                domain="[('partner_id','=', partner_id)]"/>
                            <field name="allowed_family_ids" invisible="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_partner_payer_form" model="ir.actions.act_window">
        <field name="name">Payers</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner.student.payer</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_partner_payer"
        action="action_partner_payer_form"
        name="Payers"
        sequence="2" parent="contacts.menu_contacts"/>
</odoo>
