<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    		 <record model="ir.ui.view" id="view_invoice_line_form_view_inh">
                <field name="name">view.invoice.line.form.view.inh</field>
                <field name="model">account.invoice.line</field>
                <field name="type">form</field>
                <field name="inherit_id" ref="account.view_invoice_line_form"/>
                <field name="arch" type="xml">
                    <xpath expr="//page[@string='Line']/field[@name='product_id']" position="before">
						<field name="sequence" />
					</xpath>
                </field>
             </record>
             
             <record model="ir.ui.view" id="view_invoice_line_tree_view_inh">
                <field name="name">view.invoice.line.tree.view.inh</field>
                <field name="model">account.invoice.line</field>
                <field name="type">form</field>
                <field name="inherit_id" ref="account.view_invoice_line_tree"/>
                <field name="arch" type="xml">
                    <xpath expr="//tree[@string='Invoice Line']/field[@name='name']" position="before">
						<field name="sequence" />
					</xpath>
                </field>
             </record>
    </data>
</openerp>