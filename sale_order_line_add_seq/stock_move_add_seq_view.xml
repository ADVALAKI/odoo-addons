<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    		<!-- ##############################################################################################
            #################################### STOCK: PICKING FORM ##########################################
            ###################################################################################################-->
    		 <record model="ir.ui.view" id="stock_picking_form_view_inh">
                <field name="name">stock.picking.form.view.inh</field>
                <field name="model">stock.picking</field>
                <field name="type">form</field>
                <field name="inherit_id" ref="stock.view_picking_form"/>
                <field name="arch" type="xml">
                	<xpath expr="//page[@string='Products']//tree/field[@name='product_id']" position="before">
						<field name="sequence" />
					</xpath>
                </field>
            </record> 
            
            <!-- ##############################################################################################
            #################################### STOCK: PICKING OUT FORM #######################################
            ###################################################################################################-->
            <record model="ir.ui.view" id="stock_picking_out_form_view_inh">
                <field name="name">stock.picking.form.out.view.inh</field>
                <field name="model">stock.picking</field>
                <field name="type">form</field>
                <field name="inherit_id" ref="stock.view_picking_out_form"/>
                <field name="arch" type="xml">
                	<xpath expr="//page[@string='Products']//tree/field[@name='product_id']" position="before">
						<field name="sequence" />
					</xpath>
                </field>
            </record> 
            
            <!-- ##############################################################################################
            #################################### STOCK: PICKING IN FORM #######################################
            ###################################################################################################-->
            
            <record model="ir.ui.view" id="stock_picking_in_form_view_inh">
                <field name="name">stock.picking.form.in.view.inh</field>
                <field name="model">stock.picking</field>
                <field name="type">form</field>
                <field name="inherit_id" ref="stock.view_picking_in_form"/>
                <field name="arch" type="xml">
                	<xpath expr="//page[@string='General Information']//tree/field[@name='product_id']" position="before">
						<field name="sequence" />
					</xpath>
                </field>
            </record> 
            
    </data>
</openerp>
