<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record id="view_survey_contact_name_inh" model="ir.ui.view">
			<field name="name">Survey Contact Inherited</field>
			<field name="model">survey.name.wiz</field>
			<field name="inherit_id" ref="avanzosc_training_survey.view_survey_name_inh" />
			<field name="type">form</field>
			<field name="arch" type="xml">
				<field name="address_id" position="after">
					<field name="contact_id" />
				</field>
				<field name="address_id" position="attributes">
					<attribute name="on_change">onchange_address(address_id)</attribute>
				</field>
			</field>
		</record>

		<record model="ir.ui.view" id="survey_contact_response_form_view_inh">
			<field name="name">survey.contact.response.form.inh</field>
			<field name="model">survey.response</field>
			<field name="type">form</field>
			<field name="inherit_id"
				ref="avanzosc_training_survey.survey_response_form_view_inh" />
			<field name="arch" type="xml">
				<xpath expr="/form/field[@name='address_id']" position="after">
					<field name="contact_id" />
				</xpath>
			</field>
		</record>

		<record model="ir.ui.view" id="survey_contact_response_tree_view_inh">
			<field name="name">survey.contact.response.tree.inh</field>
			<field name="model">survey.response</field>
			<field name="type">tree</field>
			<field name="inherit_id"
				ref="avanzosc_training_survey.survey_response_tree_view_inh" />
			<field name="arch" type="xml">
				<xpath expr="/tree/field[@name='partner_id']" position="after">
					<field name="contact_id" />
				</xpath>
			</field>
		</record>
		<act_window
			domain="[('contact_id','=',[active_id])]"
			id="act_res_partner_contact_2_survey_answer"
			name="Survey Answers" res_model="survey.response" src_model="res.partner.contact"
			view_type="form" view_mode="tree,form" />
	</data>
</openerp>