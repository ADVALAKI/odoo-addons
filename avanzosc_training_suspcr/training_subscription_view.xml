	 -->
			
	<!-- FORM : Training Charge -->
		<record model="ir.ui.view" id="product_product_training_charges_form">
			<field name="name">product.product.training.charges.form</field>
			<field name="model">product.product</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="product.product_normal_form_view" />
			<field name="arch" type="xml">
				<page string="Information" position="inside">
					<group colspan="2" col="2">
						<separator string="Training Charge" colspan="2" />
						<field name="training_charges" />
						<field name="discount" attrs="{'invisible':[('training_charges','not in',('fee','recog'))]}"/>
						<field name="applying_unit" attrs="{'invisible':[('training_charges','not in',('fee','recog'))]}"/>
						<field name="price_rates"/>
					</group>
				</page>
			</field>
		</record>
		
		<!-- ADD search -->
		<record model="ir.ui.view" id="product_search_form_view_inh">
                <field name="name">product.search.form.view.inh</field>
                <field name="model">product.product</field>
                <field name="type">form</field>
                <field name="inherit_id" ref="product.product_search_form_view"/>
                <field name="arch" type="xml">
                    <xpath expr="//search[@string='Product']/field[@name='categ_id']" position="after">
						<field name="training_charges" />
					</xpath>
                </field>
         </record>
    <!-- 
	======================================================================================================
	TRAINING.SUBSCRIPTION
	======================================================================================================
	-->

	<!-- FORM -->
		<record model="ir.ui.view" id="training_subscription_form_inh">
        	<field name="name">training.subscription.form.inh</field>
			<field name="model">training.subscription</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="training.training_subscription_form"/>
            <field name="arch" type="xml">
            	<xpath expr="//field[@name='create_date']" position="after">
					<field name="offer_id"/>
				</xpath>
            </field>
        </record>
	<!-- 
	===========================================================================
	TRAINING.SUBSCRIPTION.LINE
	===========================================================================
	-->
	
	<!-- FORM -->
		<record model="ir.ui.view" id="training_subscription_line_form_inh">
        	<field name="name">training.subscription.line.form.inh</field>
			<field name="model">training.subscription.line</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="training.training_subscription_line_form"/>
            <field name="arch" type="xml">
            	<xpath expr="//page[@string='General']//field[@name='session_id']" position="after">
					<field name="session_id2"/>
				</xpath>
            	<xpath expr="//page[@string='General']//field[@name='price_list_id']" position="after">
            		<separator string="Sale order" colspan="4" />
					<field name="sale_order_id"/>
				</xpath>
            </field>
        </record>
        
        <!-- SEARCH -->
        <record model="ir.ui.view" id="training_subscription_line_search_inh">
        	<field name="name">training.subscription.line.search.inh</field>
			<field name="model">training.subscription.line</field>
            <field name="type">search</field>
            <field name="inherit_id" ref="training.training_subscription_line_search"/>
            <field name="arch" type="xml">
            	<xpath expr="//field[@name='partner_id']" position="after">
            		<field name="state_id"/>
            		<field name="session_name"/>
            	</xpath>
            	<xpath expr="//filter[@string='Create Date']" position="after">
					<filter string="State Name" domain="[]" context="{'group_by':'state_id'}" />
					<filter string="Session" domain="[]" context="{'group_by':'session_name'}" />
				</xpath>
            </field>
        </record>
        
        <!-- TREE -->
        <record model="ir.ui.view" id="training_subscription_line_tree_inh">
        	<field name="name">training.subscription.line.tree.inh</field>
			<field name="model">training.subscription.line</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="training.training_subscription_line_tree"/>
            <field name="arch" type="xml">
            	<xpath expr="//field[@name='session_id']" position="replace">
					<field name="session_id" invisible="1"/>
            		<field name="session_name"/>
					<field name="session_id2"/>
					<field name="state_id"/>
				</xpath>
				<xpath expr="//field[@name='session_date']" position="replace">
				</xpath>
				<xpath expr="//field[@name='contact_lastname']" position="replace">
					<field name="contact_id"/>
					<field name="address"/>
				</xpath>
				<xpath expr="//field[@name='contact_firstname']" position="replace">
				</xpath>
				<xpath expr="//field[@name='kind']" position="replace">
				</xpath>
				<xpath expr="//field[@name='partner_id']" position="replace">
				</xpath>
				<xpath expr="//field[@name='price_list_id']" position="replace">
				</xpath>
                <xpath expr="//field[@name='partner_hr_email']" position="replace">
				</xpath>
                <xpath expr="//field[@name='job_email']" position="replace">
				</xpath>
                <xpath expr="//field[@name='notification_text']" position="replace">
				</xpath>
                <xpath expr="//field[@name='price']" position="replace">
				</xpath>
                <xpath expr="//field[@name='max_limit']" position="replace">
				</xpath>
                <xpath expr="//field[@name='confirmed_subscriptions']" position="replace">
				</xpath>
                <xpath expr="//field[@name='available_seats']" position="replace">
				</xpath>
                <xpath expr="//field[@name='draft_subscriptions']" position="replace">
				</xpath>
                <xpath expr="//field[@name='theoritical_disponibility']" position="replace">
				</xpath>
                <xpath expr="//field[@name='create_date']" position="replace">
				</xpath>
                <xpath expr="//field[@name='validation_date']" position="replace">
				</xpath>
                <xpath expr="//field[@name='invoice_line_id']" position="replace">
				</xpath>
                <xpath expr="//field[@name='has_certificate']" position="replace">
				</xpath>
				<!-- <xpath expr="//field[@name='course_id']" position="replace">
				</xpath> -->
				<!-- <xpath expr="//field[@name='school_id']" position="replace">
				</xpath> -->
            </field>
        </record>
        
        <!-- TREE -->
        <record model="ir.ui.view" id="training_subscription_line_tree_inh2">
        	<field name="name">training.subscription.line.tree.inh2</field>
			<field name="model">training.subscription.line</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="training_exam.subscription_line_tree_inherited"/>
            <field name="arch" type="xml">
				<xpath expr="//field[@name='course_id']" position="replace">
				</xpath>
            </field>
        </record>
        
        <!-- TREE -->
        <record model="ir.ui.view" id="training_subscription_line_tree_inh3">
        	<field name="name">training.subscription.line.tree.inh3</field>
			<field name="model">training.subscription.line</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="training_exam.subscription_line_tree2_inherited"/>
            <field name="arch" type="xml">
				<xpath expr="//field[@name='course_id']" position="replace">
				</xpath>
            </field>
        </record>
        
        <!-- TREE -->
        <record model="ir.ui.view" id="training_subscription_line_tree_inh4">
        	<field name="name">training.subscription.line.tree.inh4</field>
			<field name="model">training.subscription.line</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="training_multi_school.training_subscription_line_inherited_tree"/>
            <field name="arch" type="xml">
				<xpath expr="//field[@name='school_id']" position="replace">
				</xpath>
            </field>
        </record>
        
	</data>
