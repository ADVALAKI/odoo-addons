<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

		<record model="ir.ui.view" id="wiz_training_fee_master_form_view">
			<field name="name">wiz.training.fee.master.form</field>
			<field name="model">wiz.training.fee.master</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Fee">
					<field name="name" readonly="1" />
					<field name="check" />
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="wiz_training_fee_master_tree_view">
			<field name="name">wiz.training.fee.master.tree</field>
			<field name="model">wiz.training.fee.master</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Fee List" editable="bottom">
					<field name="name" readonly="1" />
					<field name="check" />
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="wiz_training_recog_master_form_view">
			<field name="name">wiz.training.recog.master.form</field>
			<field name="model">wiz.training.recog.master</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Recognition">
					<field name="name" readonly="1" />
					<field name="check" />
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="wiz_training_recog_master_tree_view">
			<field name="name">wiz.training.recog.master.tree</field>
			<field name="model">wiz.training.recog.master</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Recognition List" editable="bottom">
					<field name="name" readonly="1" />
					<field name="check" />
				</tree>
			</field>
		</record>
		
		<record model="ir.ui.view" id="wiz_training_subject_master_tree_view">
			<field name="name">wiz.training.subject.master.tree</field>
			<field name="model">wiz.training.subject.master</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Subject List" editable="bottom">
					<field name="name" readonly="1" />
					<field name="date" readonly="1" />
					<field name="duration" readonly="1" />
					<field name="check" />
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="wiz_add_optional_fee_form_view">
			<field name="name">wiz.add.optional.fee.form.view</field>
			<field name="model">wiz.add.optional.fee</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Registration">
					<notebook colspan="4" >
						<page string="Subjects">
							<group colspan="4">
								<field name="subject_list" nolabel="1" colspan="4" height="300"/>
							</group>
						</page>
						<page string="Charges">
							<group colspan="4">
								<field name="fee_list" nolabel="1" colspan="4" />
							</group>
						</page>
						<page string="Recognitions">
							<group colspan="4">
								<field name="recog_list" nolabel="1" colspan="4" />
							</group>
						</page>
					</notebook>
					<group colspan="4">
						<button icon='gtk-cancel' special="cancel" string="Cancel" />
						<button name="insert_charge" icon='gtk-ok' type="object"
							string="Ok" />
					</group>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="wiz_training_record_form_view">
			<field name="name">wiz.training.record.form.view</field>
			<field name="model">wiz.training.record</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Registration">
					<group colspan="4" >
						<separator string="Select Record" colspan="4"/>
						<field name="record_ids" nolabel="1" height="150"/>
					</group>
					<group colspan="4" attrs="{'invisible': [('record_ids', '=', False)]}">
						<label string="This student has a record. Please, proceed with the process." colspan="4" />
					</group>
					<group colspan="4" attrs="{'invisible': [('record_ids', '!=', False)]}">
						<label string="Record not found for this student. Please, create one." colspan="4" />
					</group>	
					<group colspan="4">
						<separator string="" colspan="4"/>
						<button icon='gtk-cancel' special="cancel" string="Cancel" />
						<button name="check_record" icon='gtk-ok' type="object"
							string="Next" />
					</group>
				</form>
			</field>
		</record>
		
		
		<record id="act_wiz_training_record" model="ir.actions.act_window">
			<field name="name">action.training.record.wizard</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">wiz.training.record</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

		<act_window name="Registration" res_model="wiz.training.record"
			src_model="sale.order" view_mode="form" target="new" key2="client_action_multi"
			id="wiz_training_record" />
		
	</data>
</openerp>