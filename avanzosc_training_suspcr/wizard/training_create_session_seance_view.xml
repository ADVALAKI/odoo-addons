<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<!-- 
		=========================================================================== 
			WIZARD CREATE SESSION & SEANCES
		===========================================================================
		 -->

		<record model="ir.ui.view" id="training_create_session_seances_line_form_view_inh">
			<field name="name">training.create.session.seances.line.form.view.inh</field>
			<field name="model">training.create.session.seances.line</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="The courses of the offer">
					<group colspan="4" col="6">
						<field name="course_id" />
						<field name="time" widget="float_time" />
						<field name="duration" widget="float_time" />
					</group>
					<group colspan="4" col="14">
						<field name="monday" />
						<field name="tuesday" />
						<field name="wednesday" />
						<field name="thursday" />
						<field name="friday" />
						<field name="saturday" />
						<field name="sunday" />
					</group>
					<field name="create_sessions_id" invisible="1" />
				</form>
			</field>
		</record>
		
		<record model="ir.ui.view" id="training_create_session_seances_line_tree_view_inh">
			<field name="name">training.create.session.seances.line.tree.view.inh</field>
			<field name="model">training.create.session.seances.line</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree editable="bottom" string="The courses of the offer">
					<field name="course_id"
						domain="[('offer_ids', 'in', parent.offer_id.course_ids.course_id)]" />
					<field name="semester" />
					<field name="avanzosc_date_from" />
					<field name="avanzosc_date_to" />
					<field name="tipology" />
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="training_create_session_seances_form_view_inh">
			<field name="name">training.create.session.seances.form.view.inh</field>
			<field name="model">training.create.session.seances</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="training.training_create_session_seances_form" />
			<field name="arch" type="xml">
				<!-- DATA -->
				<xpath
					expr="//form[@string='Create Session and Seances']/field[@name='date_from']"
					position="replace" />
				<xpath
					expr="//form[@string='Create Session and Seances']/field[@name='date_to']"
					position="replace">
					<field name="calendar" />
				</xpath>
				<!-- NEW TREE -->
				<xpath expr="//field[@name='line_ids']" position="replace">
					<field name="line_ids" colspan="4" nolabel="1" height="400"/>
				</xpath>
			</field>
		</record>

		<record model="ir.ui.view" id="training_session_form_inh">
			<field name="name">training.session.form.inh</field>
			<field name="model">training.session</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="training.training_session_form" />
			<field name="arch" type="xml">
				<xpath expr="//page[@string='Seances']" position="after">
					<page string="Price per Credit">
						<field name="price_list" nolabel='1' height="250" />
					</page>
				</xpath>
			</field>
		</record>

		<!-- 
		=========================================================== 
			CREDIT PRICES
		===========================================================
		-->
		
		<!-- FORM -->
		<record model="ir.ui.view" id="training_credit_prices_seance_form_view">
			<field name="name">training.credit.prices.form.seance.view</field>
			<field name="model">training.credit.prices.seance</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Title Price Form">
					<group colspan="4">
						<field name="num_comb" />
						<field name="price_credit" />
						<field name="price_credit_teaching" />
					</group>
				</form>
			</field>
		</record>

		<!-- TREE -->
		<record model="ir.ui.view" id="training_credit_prices_seance_tree_view">
			<field name="name">training.credit.prices.seance.tree.view</field>
			<field name="model">training.credit.prices.seance</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Title Price Tree" editable="bottom">
					<field name="num_comb" />
					<field name="price_credit" />
					<field name="price_credit_teaching" />
				</tree>
			</field>
		</record>
	</data>
</openerp>
