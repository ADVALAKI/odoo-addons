<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

		<record model="ir.ui.view" id="wiz_delete_recog_form_view">
			<field name="name">wiz.delete.recog.form.view</field>
			<field name="model">wiz.delete.recog</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Delete Recog">
				<field name="recog_list" nolabel="1" colspan="4" height="300" width="400"/>
				<button name="delete_recog" icon='gtk-ok' type="object"
							string="Ok"/>
				</form>
			</field>
		</record>
		
		<record model="ir.ui.view" id="wiz_training_recog_tree_view">
			<field name="name">wiz.training.recog.tree.view</field>
			<field name="model">wiz.training.recog</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Recog Lines" editable="bottom">
	            	<!-- <field name="product_id"/> -->
	            	<field name="name" readonly="1"/>
	                <field name="check"/>
				</tree>
			</field>
		</record>
		
		<record model="ir.ui.view" id="wiz_training_recog_form_view">
			<field name="name">wiz.training.recog.form.view</field>
			<field name="model">wiz.training.recog</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Recog Line">
	            	<!-- <field name="product_id"/> -->
	            	<field name="name" readonly="1"/>
	                <field name="check"/>
				</form>
			</field>
		</record>

		<record id="act_delete_recog" model="ir.actions.act_window">
			<field name="name">action.delete.recog.wizard</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">wiz.delete.recog</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

		<act_window name="Delete Recog" res_model="wiz.delete.recog"
			src_model="sale.order" view_mode="form" target="new" key2="client_action_multi"
			id="wiz_delete_recog" />
			
		<record model="ir.ui.view" id="sale_order_delete_recog_form">
			<field name="name">sale.order.delete_recog.form</field>
			<field name="model">sale.order</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="avanzosc_training_suspcr.sale_order_training_charges_form" />
			<field name="arch" type="xml">
				<xpath expr="//button[@string='Register']" position="after">
					<button name ="%(act_delete_recog)d" type="action" string="Delete Recog" icon="gtk-convert" colspan="2" attrs="{'invisible':[('recog','=',False)]}"/>
				</xpath>
			</field>
		</record>

	</data>
</openerp>