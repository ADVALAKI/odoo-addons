<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

    	<record model="ir.ui.view" id="item_list_tree_view">
                <field name="name">item.list.tree</field>
                <field name="model">item.list</field>
                <field name="type">tree</field>
                <field name="arch" type="xml">
                    <tree string="Item List" editable="top">
                        <field name="selected"/>
          				<field name="prodlot_id"/>
          				<field name="product_id"/>
          				<field name="partner_id"/>
                    </tree>
                </field>
        </record>
        <record model="ir.ui.view" id="item_list_form_view">
                <field name="name">item.list.form</field>
                <field name="model">item.list</field>
                <field name="type">form</field>
                <field name="arch" type="xml">
                    <form string="Item List">
                        <field name="selected"/>
          				<field name="prodlot_id"/>
                    </form>
                </field>
        </record>
    	
    	<record model="ir.actions.act_window" id="action_item_list_tree_view">
                <field name="name">item.list.act</field>
                <field name="type">ir.actions.act_window</field>
                <field name="res_model">item.list</field>
                <field name="view_type">form</field>
                <field name="view_mode">tree,form</field>
        </record>
	        
        <record model="ir.ui.view" id="item_recession_form_view">
                <field name="name">item.recession.form</field>
                <field name="model">item.recession</field>
                <field name="type">form</field>
                <field name="arch" type="xml">
                    <form string="Recession">
                    	<group colspan="4" col="20">
	                    	<group colspan="18" col="4">
	                        	<field name="item_ids" nolabel="1" height="500" width="750"/>
 	                        </group>
	                        <group colspan="2" col="4">
	                        	<button string="Cancel" special="cancel" icon="gtk-cancel"/>
	                        	<newline/>
	                        	<button name="pick_create" string="Ok" type="object" icon="gtk-ok"/>
	                        </group>
                        </group>
                    </form>
                </field>
        </record>
    	<record model="ir.actions.act_window" id="act_item_recession">
                <field name="name">item.recession</field>
                <field name="type">ir.actions.act_window</field>
                <field name="res_model">item.recession</field>
                <field name="view_type">form</field>
                <field name="view_mode">form</field>
        </record>
	
    </data>
</openerp>