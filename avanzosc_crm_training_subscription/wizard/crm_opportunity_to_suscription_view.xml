<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

		<!-- opport to subscription view -->

		<record model="ir.ui.view" id="opport_to_subscription_view">
			<field name="name">crm.opport2subscription.form</field>
			<field name="model">crm.opport2subscription</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Convert to subscription">
					<group colspan="4" col="6">
						<field name="partner_id" />
						<field name="contact_id" />
						<field name="offer_id" on_change="onchange_offer_id(offer_id)" />
						<field name="super_title" />
						<separator string="Sessions" />
						<field name="session_id" domain="[('offer_id','=',offer_id)]" />
						<field name="session_id2"
							attrs="{'invisible':[('super_title','=',False)],'required':[('super_title','=',True)]}" />
					</group>
					<separator string=" " colspan="4" />
					<group colspan="4" col="3">
						<label string=" " />
						<button string="_Cancel" icon="gtk-cancel" special="cancel" />
						<button name="action_apply" type="object" string="_Convert"
							icon="gtk-convert" />
						<!-- <button name="%(survey.action_view_survey_name)d" type="action" 
							string="_Convert" icon="gtk-convert" /> -->
					</group>
				</form>
			</field>
		</record>

		<!-- opport to subscription action -->

		<record model="ir.actions.act_window" id="opport_to_subscription_act">
			<field name="name">Convert To subscription</field>
			<field name="res_model">crm.opport2subscription</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="opport_to_subscription_view" />
			<field name="target">new</field>
		</record>

	</data>
</openerp>  