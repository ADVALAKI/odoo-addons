<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    			<record model="ir.ui.view" id="iniciativa_contacto_add_form_view_inh">
                <field name="name">iniciativa.contacto.add.form.view.inh</field>
                <field name="model">crm.lead</field>
                <field name="type">form</field>
                <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
                <field name="arch" type="xml">
                	<!-- Contatcto -->
                    <xpath expr="//page[@string='Lead']//field[@name='partner_name']" position="before">
                    	<field name='contact_name' on_change="onchange_contact(contact_name,contact_surname)"/>
                    	<field name='contact_surname' on_change="onchange_contact(contact_name,contact_surname)"/>
                    	<separator colspan="4" string="Payer data"/>	
                    </xpath>
                    <!--  -->
                    <xpath expr="//page[@string='Lead']//field[@name='partner_name']" position="after">
                    	<field name='contact_resum'/>
                    </xpath>
                </field>
            </record>
    
    
    </data>
</openerp>
