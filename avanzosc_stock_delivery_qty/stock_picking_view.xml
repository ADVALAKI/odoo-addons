<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		
		<!--
	    ================================
	    Stock Picking Form Inheritance
	    ================================
	    -->
        
        
        <record id="view_picking_in_totals_inh" model="ir.ui.view">
            <field name="name">picking.in.totals.inh</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_in_tree"/>
            <field name="type">tree</field>
            <field name="arch" type="xml">
	            <xpath expr="/tree/field[@name='invoice_state']" position="before">
	            	<field name="total_picking_qty"/>
	            	<field name="total_invoice_qty"/>
	            </xpath>	  
	            <xpath expr="/tree/field[@name='supplierpack']" position="replace"/>
	            <xpath expr="/tree/field[@name='partner_id']" position="before">
	            	<field name="supplierpack"/>
	            </xpath>         
            </field>
        </record>
        
        <record id="view_picking_out_totals_inh" model="ir.ui.view">
            <field name="name">picking.out.totals.inh</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_out_tree"/>
            <field name="type">tree</field>
            <field name="arch" type="xml">
	            <xpath expr="/tree/field[@name='invoice_state']" position="before">
	            	<field name="total_picking_qty"/>
	            	<field name="total_invoice_qty"/>
	            </xpath>
            </field>
        </record>
        
        <record id="view_picking_totals_inh" model="ir.ui.view">
            <field name="name">picking.totals.inh</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree"/>
            <field name="type">tree</field>
            <field name="arch" type="xml">
	            <xpath expr="/tree/field[@name='invoice_state']" position="before">
	            	<field name="total_picking_qty"/>
	            	<field name="total_invoice_qty"/>
	            </xpath>
            </field>
        </record>
		
        
        
        
		<record id="stock_picking_sup_qty_form" model="ir.ui.view">
            <field name="name">stock.picking.sup.qty.form</field>
            <field name="type">form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_in_form"/>
            <field name="arch" type="xml">
            	<xpath expr="/form/group/group/field[@name='stock_journal_id']" position="after">
            		<field name= "total_invoice_qty"/>
            		<field name= "total_picking_qty" string="Total received qty"/>
            	</xpath>
                <xpath expr="/form/notebook/page/field[@name='move_lines']/tree/field[@name='product_qty']" position="before">
  					<field name="sup_qty" string="Cant. de Pedido"/>
                    <field name="invoice_qty" string="Cant. a facturar"/>
                    
                </xpath>
                <xpath expr="/form/notebook/page/field[@name='move_lines']/form/group/field[@name='product_uom']" position="before">
                    <newline/>
                    <field name="sup_qty" string="Cant. de Pedido" />
                    <field name="invoice_qty" string="Cant. a Facturar" />
                    <field name="purchase_line_id"/>
                    <newline/>
                </xpath>
                <xpath expr="/form/notebook/page/field[@name='move_lines']/tree/field[@name='product_qty']" position="replace">
            		<field name="product_qty" string="Cant. a Recibir" on_change="onchange_qty(product_qty)"/>
            	</xpath>
            	<xpath expr="/form/notebook/page/field[@name='move_lines']/form/group/field[@name='product_qty']" position="replace">
            		<field name="product_qty" string="Cant. a Recibir" on_change="onchange_qty(product_qty)"/>
            	</xpath>
            	<xpath expr="/form/notebook/page/field[@name='move_lines']/tree/field[@name='state']" position="before">
            		<field name="purchase_line_id"/>
            	</xpath>
            	<xpath expr="/form/notebook/page/field[@name='move_lines']/tree/field[@name='prodlot_id']" position="before">
            		<field name="price_unit"/>
            	</xpath>
            </field>
        </record>
        
        <record id="stock_picking_out_sup_qty_form" model="ir.ui.view">
            <field name="name">stock.picking.out.sup.qty.form</field>
            <field name="type">form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_out_form"/>
            <field name="arch" type="xml">
            	<xpath expr="/form/group/group/field[@name='min_date']" position="replace">
            		<field name="min_date_editable" />
            	</xpath>
            	<xpath expr="/form/group/group/field[@name='backorder_id']" position="after">
            		<field name="manual_pick_ref"/>
            	</xpath>
            	<xpath expr="/form/group/group/field[@name='stock_journal_id']" position="after">
            		<field name= "total_invoice_qty"/>
            		<field name= "total_picking_qty" string="Total received qty"/>
            	</xpath>
                <xpath expr="/form/notebook/page/field[@name='move_lines']/tree/field[@name='product_qty']" position="before">
                    <field name="sup_qty" string="Cant. de Pedido"/>
                    <field name="invoice_qty" string="Cant. a Facturar"/>
                </xpath>
                <xpath expr="/form/notebook/page/field[@name='move_lines']/form/group/field[@name='product_uom']" position="before">
                    <newline/>
                    <field name="sup_qty" string="Cant. de Pedido" />
                    <field name="invoice_qty" string="Cant. a Facturar" />
                    <newline/>
                </xpath>
                <xpath expr="/form/notebook/page/field[@name='move_lines']/tree/field[@name='product_qty']" position="replace">
            		<field name="product_qty" string="Cant. a Enviar" on_change="onchange_qty(product_qty)"/>
            	</xpath>
            	<xpath expr="/form/notebook/page/field[@name='move_lines']/tree/field[@name='prodlot_id']" position="before">
            		<field name="price_unit"/>
            	</xpath>
            	<xpath expr="/form/notebook/page/field[@name='move_lines']/form/group/field[@name='product_qty']" position="replace">
            		<field name="product_qty" string="Cant. a Enviar" on_change="onchange_qty(product_qty)"/>
            	</xpath>
            	<xpath expr="/form/notebook/page/field[@name='move_lines']/tree/button[@string='Split in production lots']" position="after">
            		<button name="%(act_split_lot_wizard)d" string="Split Selected" icon="gtk-convert" attrs="{'invisible': [('prodlot_id','&lt;&gt;',False)]}" states="draft,assigned,confirmed" groups="base.group_extended" type="action"/>
            	</xpath>
            </field>
        </record>  
         <record id="stock_picking_loc_form" model="ir.ui.view">
            <field name="name">stock.picking.loc.form</field>
            <field name="type">form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
            	<xpath expr="/form/notebook/page/field[@name='move_lines']/form/group/field[@name='location_id']" position="replace">
            		<field name="location_id" />
            	</xpath>
            	<xpath expr="/form/notebook/page/field[@name='move_lines']/form/group/field[@name='location_dest_id']" position="replace">
            		
                    <field name="location_dest_id"/>
            
            	</xpath>
            </field>
        </record>
        <record id="stock_move_memory_out_tree_inh" model="ir.ui.view">
            <field name="name">stock.move.memory.out.tree.inh</field>
            <field name="type">tree</field>
            <field name="model">stock.move.memory.out</field>
            <field name="inherit_id" ref="stock.stock_move_memory_tree_out"/>
            <field name="arch" type="xml">
                <xpath expr="/tree/field[@name='quantity']" position="after">
  					<field name="invoice_qty" string="Cant. a Facturar"/>  
  				</xpath>
  			</field>
  		</record>
  		
  		<record id="stock_move_memory_out_inh" model="ir.ui.view">
            <field name="name">stock.move.memory.out.inh</field>
            <field name="type">form</field>
            <field name="model">stock.move.memory.out</field>
            <field name="inherit_id" ref="stock.stock_move_memory_form_out"/>
            <field name="arch" type="xml">
                <xpath expr="/form/field[@name='quantity']" position="after">
  					<field name="invoice_qty" string="Cant. a Facturar"/>  
  				</xpath>
  			</field>
  		</record>  
  		
  		 <record id="stock_move_memory_in_tree_inh" model="ir.ui.view">
            <field name="name">stock.move.memory.in.tree.inh</field>
            <field name="type">tree</field>
            <field name="model">stock.move.memory.in</field>
            <field name="inherit_id" ref="stock.stock_move_memory_tree_in"/>
            <field name="arch" type="xml">
                <xpath expr="/tree/field[@name='quantity']" position="after">
  					<field name="invoice_qty" string="Cant. a Facturar"/>  
  				</xpath>
  			</field>
  		</record>
  		
  		<record id="stock_move_memory_in_inh" model="ir.ui.view">
            <field name="name">stock.move.memory.in.inh</field>
            <field name="type">form</field>
            <field name="model">stock.move.memory.in</field>
            <field name="inherit_id" ref="stock.stock_move_memory_form_in"/>
            <field name="arch" type="xml">
                <xpath expr="/form/field[@name='quantity']" position="after">
  					<field name="invoice_qty" string="Cant. a Facturar"/>  
  				</xpath>
  			</field>
  		</record>  
  		
  		<record id="invoice_supplier_form_inh" model="ir.ui.view">
            <field name="name">account.invoice.supplier.form_inh</field>
            <field name="model">account.invoice</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/notebook/page[@string='Invoice']/field[@name='invoice_line']/tree/field[@name='product_id']" position="after">
                	<field name="sup_picking_ref"/>
                	<field name="picking_qty"/>
                </xpath>
                <xpath expr="/form/group/group" position="after">
   					<newline/>
   					<field name="total_invoice_qty"/>
   					<field name="total_pick_qty"/>
   				</xpath>
            </field>
        </record>
        
      <record id="view_invoice_line_form_inh" model="ir.ui.view">
            <field name="name">account.invoice.line.form.inh</field>
            <field name="model">account.invoice.line</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.view_invoice_line_form"/>
            <field name="arch" type="xml">
        		<xpath expr="/form/notebook/page[@string='Line']/field[@name='product_id']" position="after">
                	<field name="picking_qty"/>        		
        		</xpath>
        	</field>
        </record>
        		
         <record id="view_invoice_line_tree_inh" model="ir.ui.view">
            <field name="name">account.invoice.line.tree.inh</field>
            <field name="model">account.invoice.line</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="account.view_invoice_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="/tree/field[@name='name']" position="after">
                	<field name="picking_qty"/> 
                </xpath>
        	</field>
        </record>
   		
   		<record id="view_account_invoice_total_cl" model="ir.ui.view">
   			<field name="name">view.account.invoice.totals_cl</field>
   			<field name="model">account.invoice</field>
   			<field name="type">form</field>
   			<field name="inherit_id" ref="account.invoice_form"/>
   			<field name="arch" type="xml">
   				<xpath expr="/form/group/group" position="after">
   					<newline/>
   					<field name="total_invoice_qty"/>
   					<field name="total_pick_qty"/>
   				</xpath>
   			</field>
   		</record>
   		
		<record id="view_split_in_lots_inh" model="ir.ui.view">
		       <field name="name">Split in lots inh</field>
		       <field name="model">stock.move.split</field>
		       <field name="type">form</field>
		       <field name="inherit_id" ref="stock.view_split_in_lots"/>
		       <field name="arch" type="xml">
		       	<xpath expr="/form/group/group/field[@name='line_ids']/tree/field[@name='quantity']" position="after">
		       		<field name="invoice_qty"/>
		       	</xpath>
		       	<xpath expr="/form/group/group/field[@name='line_ids']/form/field[@name='quantity']" position="after">
		       		<field name="invoice_qty"/>
		       	</xpath>	
		       	<xpath expr="/form/group/group/field[@name='line_exist_ids']/form/field[@name='quantity']" position="after">
		       		<field name="invoice_qty"/>
		       	</xpath>
		       		<xpath expr="/form/group/group/field[@name='line_exist_ids']/tree/field[@name='quantity']" position="after">
		       		<field name="invoice_qty"/>
		       	</xpath>
		       </field>
		</record>
   		
   		<record id="view_picking_out_tree_inh" model="ir.ui.view">
            <field name="name">stock.picking.out.tree.inh</field>
            <field name="model">stock.picking</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="stock.view_picking_out_tree"/>
            <field name="arch" type="xml">
            	<field name="name" position="after">
                    <field name="manual_pick_ref"/>	
                </field>
            </field>
        </record>
        
        
        <record id="view_picking_out_search_inh" model="ir.ui.view">
            <field name="name">stock.picking.out.search.inh</field>
            <field name="model">stock.picking</field>
            <field name="type">search</field>
            <field name="inherit_id" ref="stock.view_picking_out_search"/>
            <field name="arch" type="xml">
          
               <field name="name" position="after">
          			<field name="manual_pick_ref"/>
          		</field>
            </field>
        </record>
                         
                   
        <record id="view_picking_purchase_onchange_inh" model="ir.ui.view">
            <field name="name">stock.picking.purchase.onchange.inh</field>
            <field name="model">stock.picking</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="purchase.stock_picking_in_inherit_purchase"/>
            <field name="arch" type="xml">
               <field name="purchase_id" position="replace">
          			<field name="purchase_id" on_change="onchange_purchase_order(purchase_id)"/>
          		</field>
            </field>
        </record>            
  
  		<record id="view_picking_in_search_inh" model="ir.ui.view">
            <field name="name">stock.picking.in.search.inh</field>
            <field name="model">stock.picking</field>
            <field name="type">search</field>
            <field name="inherit_id" ref="stock.view_picking_in_search"/>
            <field name="arch" type="xml">
            	<filter name="to_invoice" position="after">
            		<field name="supplierpack"/>
            	</filter>
            </field>
        </record>
	</data>
</openerp>