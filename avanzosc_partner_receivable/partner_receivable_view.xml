<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
	
		<record id="view_partner_property_form_inh" model="ir.ui.view">
            <field name="name">res.partner.property.form.inherit2</field>
            <field name="model">res.partner</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.view_partner_property_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form//field[@name='debit']" position="attributes">
					<attribute name="invisible">1</attribute>
				</xpath>
				<xpath expr="/form//field[@name='debit']" position="after">
					<field name="new_debit"/>
				</xpath>
				<xpath expr="/form//field[@name='credit']" position="attributes">
					<attribute name="invisible">1</attribute>
				</xpath>
            </field>
		</record>
		
		<record id="res_partner_form_receivable_view_inh" model="ir.ui.view">
			<field name="name">res.partner.form.contact.inherit</field>
			<field name="model">res.partner</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="base_contact.view_partner_form_inherit" />
			<field name="arch" type="xml">
				<xpath expr="/form/group/group/field[@name='lang']" position="after">
					<field name="new_credit"/>
				</xpath>
			</field>
		</record>
		
		<record id="res_partner_tree_receivable_view_inh" model="ir.ui.view">
			<field name="name">res.partner.tree.receivable.inherit</field>
			<field name="model">res.partner</field>
			<field name="type">tree</field>
			<field name="inherit_id" ref="base.view_partner_tree" />
			<field name="arch" type="xml">	
				<tree string="Partners" position="inside">
					<field name="credit"  invisible="1"/>
					<field name="new_credit" invisible="'is_supplier' in context"/>
					<field name="debit" invisible="1"/>
					<field name="new_debit"  invisible="'is_supplier' not in context"/>
				</tree>
			</field>
		</record>
		
		
		<record id="res_partner_search_receivable_view_inh" model="ir.ui.view">
			<field name="name">res.partner.search.receivable.inherit</field>
			<field name="model">res.partner</field>
			<field name="type">search</field>
			<field name="inherit_id" ref="base.view_res_partner_filter" />
			<field name="arch" type="xml">
				<field name="user_id" position="replace"/>
				<xpath expr="/search/newline" position="after">
					<group>
						<field name="user_id" select="1">
                    		<filter string="My Partners" icon="terp-personal+" domain="[('user_id','=',uid)]"/>
                    	</field>
                    	<field name="credit" invisible="1"/>
                    	<field name="debit" invisible="1"/>
						<field name="new_credit"  invisible="'is_supplier' in context"/>
						<field name="new_debit"  invisible="'is_supplier' not in context"/>
					</group>
					<newline/>
				</xpath>
			</field>
		</record>
		
		
		
		<record id="base.action_partner_supplier_form" model="ir.actions.act_window">
            <field name="name">Suppliers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="domain">[]</field>
            <field name="context">{'default_customer':0, 'search_default_supplier': 1, 'default_supplier':1, 'is_supplier':True}</field>
            <field name="filter" eval="True"/>
            <field name="help">You can access all information regarding your suppliers from the supplier form: accounting data, history of emails, meetings, purchases, etc. You can uncheck the 'Suppliers' filter button in order to search in all your partners, including customers and prospects.</field>
        </record>
	</data>
</openerp>